<!DOCTYPE html>
<html lang="en">
    <head>
        {% set page_meta_configuration = build_frontend_meta_configuration(app.request) %}
        <meta charset="UTF-8">

        <title>{{ page_meta_configuration.title }}</title>
        <meta name="description" content="{{ page_meta_configuration.description }}">
        <meta name="keywords" content="{{ page_meta_configuration.keywords }}">
        <link href="{{ asset('images/favicon.ico') }}" rel="shortcut icon" type="image/x-icon">

        {% stylesheets 
            'css/jquery-ui/base/jquery-ui-1.10.1.custom.min.css'
            'css/bootstrap.min.css'
            'http://fonts.googleapis.com/css?family=PT+Sans:400,700|Gafata'
            'css/hca-flags.css'
            'css/frontend/hca.min.css'
            output='css/frontend/compiled-styles.css'
        %}
            <link href="{{ asset_url }}" rel="stylesheet"/>
        {% endstylesheets %}

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements and CSS fixes -->
        <!--[if lt IE 9]>
            <script src="/js/html5shiv.js"></script>
            <link href="{{ asset('css/frontend/ie-fixes.css') }}" rel="stylesheet"/>
        <![endif]-->

