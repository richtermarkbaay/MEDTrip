<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />

        <!-- Mobile -->

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

        <!--[if lt IE 9]>

        <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>

        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

        <![endif]-->
        <title>{% block title %}HealthCareAbroad{% endblock %}</title>

        {% javascripts
            'js/jquery/jquery-1.8.2.js'
            'js/jquery/jquery-ui-1.9.0.custom.js'
            'bundles/helper/js/Common.js'
            output='js/compiled-splash.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block stylesheets %}
             <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/frontend/style_splash.css') }}" rel="stylesheet"/>
            <!-- Google Fonts -->
            <link href='http://fonts.googleapis.com/css?family=Play:400,700' rel='stylesheet' type='text/css'>

        {% endblock %}
    </head>
{% block body %}

    <body>
        <div id="main-wrapper">
    		<h1 id="logo">HealthcareAbroad</h1>
    		<h2 id="caption">THE RESOURCE FOR GLOBAL <b>HEALTHCARE</b>
    			<br>
    			A comprehensive, <b>unbiased</b> directory for <b>Medical Tourism</b>
    		</h2>
    		<div id="signup">
    			<span class="signup-heading">Do you want to be notified when we launch HealthcareAbroad?</span>
    			
                <form id="newsletterForm" action="{{ path('newsletter_new') }}" method="POST" {{ form_enctype(form) }} class="basic-form">
                 {{ form_errors(form) }}
                  {{ form_widget(form.email) }}
                  <button class="btn" id="newsletterButton">Notify Me</button>
                 {{ form_rest(form) }}
    
                </form>
                {% include '::frontend.notice.admin.html.twig' %}
    		</div>
    	</div>

          <script type="text/javascript">
              $(function() {

                  $('#newsletter_subscriber_email').focus(function() {
                      $('#newsletter_subscriber_email').val('');
                    });
              });
          </script>

    </body>

{% endblock %}


</html>