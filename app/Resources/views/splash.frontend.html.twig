<!doctype html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />

        <!-- Mobile -->

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <title>{% block title %}HealthCareAbroad{% endblock %}</title>

        {% javascripts
            output='js/compiled-splash.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block stylesheets %}
             <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/frontend/style_splash.css') }}" rel="stylesheet"/>

        {% endblock %}
    </head>
{% block body %}

    <body>
        <div id="main-wrapper">
    		<h1 id="logo">HealthcareAbroad</h1>
    		<h2 id="caption">THE RESOURCE FOR GLOBAL <b>HEALTHCARE</b>
    			<br>
    			A comprehensive, <b>unbiased</b> directory for <b>Medical Tourism</b>
    		</h2>
    		<div id="signup">
    			<span class="signup-heading">Do you want to be notified when we launch HealthcareAbroad?</span>
    			
                <form id="newsletterForm" action="{{ path('newsletter_new') }}" method="POST" {{ form_enctype(form) }} class="basic-form">
                 {{ form_errors(form) }}
                  {{ form_widget(form.email, {attr: {'placeholder':'Enter your email address'}}) }}
                  <button class="btn" id="newsletterButton">Notify Me</button>
                 {{ form_rest(form) }}
    
                </form>
                {% include '::frontend.notice.admin.html.twig' %}
    		</div>
    	</div>

    </body>

{% endblock %}


</html>