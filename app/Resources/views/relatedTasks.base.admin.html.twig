<!--  start related-activities -->
<div id="related-activities">
	
	<!--  start related-act-top -->
	<div id="related-act-top">
	<img src="/images/admin/forms/header_related_act.gif" width="271" height="43" alt="" />
	</div>
	<!-- end related-act-top -->
	
	<!--  start related-act-bottom -->
	<div id="related-act-bottom">
	
		<!--  start related-act-inner -->
		<div id="related-act-inner">
		    
		    {% for eachContent in contents %}
		        {% set isVisible = eachContent.isVisible is defined ? eachContent.isVisible : true %}
    		    {% if isVisible %}
        		    <div class="{{ cycle(['lines-dotted-short', ''], loop.index) }}"></div>
        		    
        		    <div class="left"><a class="{{ eachContent.class is defined ? eachContent.class : '' }}" href="{{ eachContent.href }}"><img src="/images/admin/forms/icon_plus.gif" width="21" height="21" alt="" /></a></div>
        			<div class="right">
        				<h5>{{ eachContent.title }}</h5>
        				{{ eachContent.description }}
        				
        				<ul class="greyarrow">
        				{% for subLink in eachContent.links %}
        				    <li>
        				        <a class="{{ subLink.class is defined ? subLink.class : '' }}" href="{{ subLink.href }}">{{ subLink.title is defined ? subLink.title : 'Click here to visit' }}</a>
        			        </li>
        	            {% endfor %}
        				</ul>
        				
        			</div>
        			<div class="clear"></div>
			    {% endif %}
			{% endfor %}
		</div>
		<!-- end related-act-inner -->
		<div class="clear"></div>
	
	</div>
	<!-- end related-act-bottom -->

</div>
<!-- end related-activities -->