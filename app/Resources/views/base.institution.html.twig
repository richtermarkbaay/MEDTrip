<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>{% block title %}HealthCareAbroad Institution{% endblock %}</title>
        
        {% javascripts 
			'js/jquery/jquery-1.8.0.min.js'
			'js/jquery/jquery-ui-1.8.23.custom.min.js'
			'bundles/helper/js/Common.js'
			output='js/compiled-admin.js'
        %}
        
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
		    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		  <![endif]-->
        
        	<script src="{{ asset_url }}"></script>
        {% endjavascripts %}
            <script type="text/javascript">
            $(function(){
                HCA.init({
                    autocompleteSearchUrl: "{{ path('helper_autoCompleteSearch') }}",

                    tinymceConfig: {
                        textarea_class: "{{ tinymce.textarea_class }}",
                        themeSimple: $.parseJSON('{{ tinymce.theme.simple|json_encode|raw }}'),
                        themeMedium: $.parseJSON('{{ tinymce.theme.medium|json_encode|raw }}'),
                        themeBbCode: $.parseJSON('{{ tinymce.theme.bbcode|json_encode|raw }}'),
                        themeAdvanced: $.parseJSON('{{ tinymce.theme.advanced|json_encode|raw }}')
                    }

				});
            })

			</script>
        
        {% block stylesheets %}       
            <link id="main-theme-script" rel="stylesheet" href="{{ asset('css/institution/hc-layout.css') }}">
 			<link id="theme-specific-script" rel="stylesheet" href="{{ asset('css/institution/style.css') }}">
 			<link href="{{ asset('css/jquery-ui/base/jquery.ui.all.css') }}" rel="stylesheet"/>
<!--             <link href="{{ asset('css/admin/screen.css') }}" type="text/css" rel="stylesheet"/> -->
        {% endblock %}
    </head>
    {% block body %}{% endblock %}

    {{ tinymce_init() }}
</html>