<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>{% block title %}{% endblock %}</title>

        {% javascripts 
            'js/jquery/jquery-1.8.2.js'
            'js/jquery/jquery-ui-1.10.1.custom.min.js'
            'js/bootstrap.min.js'
			'bundles/helper/js/Common.js'
			output='js/institution/compiled-javascripts.js'
        %}

        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% stylesheets
		    'css/jquery-ui/base/jquery-ui-1.10.1.custom.min.css'
            'css/bootstrap.min.css'
			'css/bootstrap-timepicker.min.css'
			'css/font-awesome.min.css'
			'css/hca-flags.css'
			'css/institution/hca-admin.min.css'
        %}
            <link href="{{ asset_url }}" rel="stylesheet"/>
        {% endstylesheets %}

        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
        
        <style type="text/css">
        
            p.alert-block {
            margin: 0 0 1px;
            padding: 5px 10px;
            }

            .align-right {    
                text-align: right;
            }
            .clearfix:before,
            .clearfix:after {
              content: ".";    
              display: block;    
              height: 0;    
              overflow: hidden; 
            }
            .clearfix:after {clear: both;}
            .clearfix {zoom: 1;} /* IE < 8 */

            form.hidden {
                margin: 0;
            }
            
            .btn[disabled],
            .btn[disabled]:hover {
                box-shadow: none;
                background: #cccccc;
                border-color: #cccccc;
            }

            .details-inline {
                display: inline-block;
                max-width: 600px;
            }
            .file-browse-btn + input[type=file]{
                position: absolute;
                visibility: hidden;    
            }

            /********** jQuery Autocomplete Custom CSS *****/

            .fancy-country-wrapper {
                height: 40px;
                postition: relative;
            }

            .fancy-country-wrapper > input[type=text] {
                display:inline-block;
                margin: 0;
                padding-top: 0;
                padding-bottom: 0;
                height: inherit;
            }

            .fancy-country-wrapper .combolist-wrapper > .ui-menu > li > a > .flag16 {
                top: 3px;
                margin: 0 7px 0 0;
                position: relative;
            }
            
            .combolist-wrapper > ul.ui-autocomplete.ui-menu {
                padding: 0;
                overflow: auto;
                max-height: 300px;
                border: 1px solid #DDDDDD;
                border-top: none;
                background-color: #f7f7f7;
            }
            
            ul.ui-autocomplete.ui-menu li {
                font-size: 14px;
            }
            
            ul.ui-autocomplete.ui-menu li:last-child {
                border-bottom: 0;
            }
            
            ul.ui-autocomplete.ui-menu li a {
                display: block;
                color: #000;
                padding: 3px 10px;
                word-wrap: break-word;
                white-space: normal;
            }
            
            ul.ui-autocomplete.ui-menu .ui-menu-item a.ui-state-focus {
                margin: 0;
                background-color: #DDD;
            }
            
            ul.ui-autocomplete.ui-menu li ul li {
                border: none;
            }
            
            ul.ui-autocomplete.ui-menu li ul li a {
                font-size: 14px !important;
                font-weight: bold;
                opacity: 0.8;
                padding: 5px 20px;
            }
            
            ul.ui-autocomplete.ui-menu li ul li a:before {
                content: "- ";
            }
            /*
            .input-append input,.popup-box input {
                width: 176px;
                padding: 5px 5px;
                box-shadow: none;
                color: #555 !important;
                -moz-transition: none;
                -webkit-transition: none;
                -o-transition: color 0 ease-in;
                transition: none;
            }
            
            .input-append input:focus,
            .popup-box input:focus {
                border-color: #919191;
            }*/
            
            /** CUSTOM SELECT STYLES **/
            .custom-select {
                margin-left: 0 !important;
                height: 40px;
                position: relative;
                display: inline-block;
            }
        
            .fancy-country-wrapper > button.btn,
            .custom-select > button.btn {
                border-radius: 0;
                height: inherit;
                padding: 0 7px;
                position: absolute;
                right: inherit;
                margin-left: -30px;
            }
            
            .custom-select > input[type=text] {
                display:inline-block;
                margin: 0;
                padding-top: 0;
                padding-bottom: 0;
                height: inherit;
            }
            
            .custom-select:after {
                content: attr(data-button);
            }

            
            .custom-select > input[readonly] {
                background-color: #FFF;
                cursor: default;
            }

            .custom-select > input[disabled] {
                background-color: #EEEEEE !important;
            }
            
            .custom-select > input[disabled] + button.btn {
                background: none;
                cursor: default;
                box-shadow: none;
            }

            .custom-select > input[type=text]:hover {
                cursor: default;
            }
            
            .custom-select > ul {
                list-style:none;
                border: 1px solid #aaa;
                margin:0;
                display:none;
                background-color: #FFF;
                position: absolute;
                top: 39px;
                z-index: 1;
                max-height: 312px;
                overflow: auto;
            }
            
            .custom-select > ul > li {
                padding: 3px 10px;
            }
            
            .custom-select > ul > li.selected {
                background-color: #DDD;
            }                    

            .no-highlight {
                -webkit-touch-callout: none;
                -webkit-user-select: none;
                -khtml-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;
            }      
            #autoDiv .ui-menu{
                background: #F7F7F7 !important;
            }      
            .awards-listing li label {
                font-weight:normal ;
            }
            .services-listing li label {
                font-weight:normal ;
            }
            /********** End of jQuery Autocomplete Custom CSS ***********/

        </style>
    </head>
    
    <body>
        {% include 'InstitutionBundle:Widgets:confirmation.html.twig' %}

        {% block body %}{% endblock %}
    
        <script type="text/javascript">
        (function(){
            $(function(){
                HCA.init({
                    tinymceConfig: {
                        textarea_class: "{{ tinymce.textarea_class }}",
                        themeSimple: $.parseJSON('{{ tinymce.theme.simple|json_encode|raw }}'),
                        themeMedium: $.parseJSON('{{ tinymce.theme.medium|json_encode|raw }}'),
                        themeBbCode: $.parseJSON('{{ tinymce.theme.bbcode|json_encode|raw }}'),
                        themeAdvanced: $.parseJSON('{{ tinymce.theme.advanced|json_encode|raw }}')
                    }
    
                });
            });
        })(jQuery);
        </script>
    </body>

    {{ tinymce_init() }}
</html>