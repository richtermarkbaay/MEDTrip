
{% if highlight %}

{% set institutionUrl = get_institution_frontend_url(highlight.institution) %}
{% set featuredImages = json_decode(highlight.highlightFeaturedImages) %} 

{#-- set statistic parameters for this advertisement --#}
{% set _impressionStatisticParametersAttribute = get_statistics_parameter_attribute_name() ~ '=' ~ encode_advertisement_impressions_parameters(highlight)  %}
{#-----------------------------------------------------#}

{#-- BE CAREFUL WHEN MODIFYING ELEMENTS WITH STATS TRACKERS --#}
<div id="highlight" class="{{ get_impression_tracker_class() }} box-shadow row" {{ _impressionStatisticParametersAttribute }} > <!--Highighted Institution-->
    <!-- institution logo link -->

    <div class="upper_box">
        <h3>
			{% include 'FrontendBundle:Widgets/Statistics:advertisement.clickthroughLink.html.twig' with {
    		        statisticsDataObject: highlight,
    		        link: { url: institutionUrl, html: highlight.institution.name }
			} %}
        </h3>
        <h5>{{ highlight.institution.city.name }}, {{ highlight.institution.country.name }}</h5>
        
        {% include 'FrontendBundle:Widgets/Statistics:advertisement.clickthroughLink.html.twig' with {
    	        statisticsDataObject: highlight,
    	        link: {url: institutionUrl, html: render_institution_logo(highlight.institution), class: 'hospital-logo-link'}
    	    }
    	%}
    </div>

	<div class="carousel slide" id="feature_carousel">
		<div class="carousel-inner">
		    {% for i, image in featuredImages %}
			<div class="{{ i==0 ? 'active' : '' }} item">
				<img alt="" src="/media/ads/{{ highlight.institution.id }}/{{ image.name }}">
			</div> <!--End of slider_item 1-->
		    {% endfor %}
		</div>
		<div class="nav-pills">
		    {% for i, image in featuredImages %}
			    <a data-to="{{ loop.index }}" href="#feature_carousel" class="carousel-pills {{ i==0 ? 'pager-active' : '' }}"><span>&nbsp;</span></a>
		    {% endfor %}
		</div>
		
		<!-- Learn more orange button -->
		{% include 'FrontendBundle:Widgets/Statistics:advertisement.clickthroughLink.html.twig' with {
		        statisticsDataObject: highlight,
		        link: {
		            url: institutionUrl,
    			    class: 'btn white feature-btn',
    			    html: '<span class="orange-icon-search icon-search"></span> Learn More'
		        }
		    }
		%}

	</div> <!--End of carousel slide-->

	<div class="media-wrapper hca-v-sprite stripe-bg orange row-fluid">		
        {% set highlights = json_decode(highlight.highlights) %}
        {% for each in highlights %}
            <div class="media span6">
                {% if each.icon %}
                    <img class="img-circle pull-left" src="{{ each.icon.src }}" alt="doctor logo" width="50"/>
                {% else %}
                    {% if each.type == 3 %}
                        <span class="hca-sprite doctor-icon img-circle orange pull-left default"></span>
                    {% else %}
                        <span class="{{ ad_highlight_placeholder_class(each.type) }} media-object img-circle pull-left"></span>
                    {% endif %}
                {% endif %}
                
                {% if each.header %}
                    <h5 class="media-heading">{{ each.header }}</h5>
                {% endif %}
                <span>{{ each.label }}</span>
            </div>
        {% endfor %}
	</div>
</div>

{% endif %}