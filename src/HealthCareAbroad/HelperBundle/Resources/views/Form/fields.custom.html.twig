            </div>
            <div style="display:inline-block; margin-left:30px;">
                <label style="font-size: 85%;">Phone Number</label>
                <input type="text" value="{{ form.vars.value.number }}" name="{{ form.vars.full_name ~ '[number]' }}"  >
            </div>
        </div>
        <div class="clearfix"></div>
    {% endspaceless %}
{% endblock %}

