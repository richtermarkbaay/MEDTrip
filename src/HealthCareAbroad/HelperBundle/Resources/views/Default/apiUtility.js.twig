var ApiUtility = {

    getRootUrl: function() {
        var apiRootUrl = ApiUtility.getApiRootUrl();
        
        return apiRootUrl.replace(/\/api$/, '');
    },

    getApiRootUrl: function(){
        return '{{ path("api_default_apiBase") | raw }}';
    }
};