
{% set treatmentsListOnly = treatmentsListOnly is defined and treatmentsListOnly %}d
<div class="accordion-group selected" style="display: block;">
    <div class="accordion-heading" style="font-size: 18px;padding: 10px 0; !important">
        <a href="#specialization_accordion_{{ specialization.id }}" data-parent="#specializationsAccordion" data-toggle="collapse" class="accordion-toggle">{{ specialization.name }}</a>
    </div>
    <div class="accordion-body in collapse" id="specialization_accordion_{{ specialization.id }}" style="height: auto;">
            {% if not treatmentsListOnly %}
                {{ specialization.description }}
            {% endif %}
            <div class="accordion-inner">
            {% for subSpecializationName, treatments in subSpecializations %}
            
                 <h5>{{ subSpecializationName | length ? subSpecializationName :"Other treatments"  }}</h5>
                 <hr/>
                {% for treatment in treatments %}
                    <div class="span4">
                        <input  id="{{ treatment.id }}" type="checkbox" name="{{ formName }}[{{ specialization.id }}][treatments][]" value="{{ treatment.id }}" {{ treatment.id in selectedTreatments ? 'checked' : '' }}/>
                        <label class="required labelCheckbox" for="{{ treatment.id }}" >{{ treatment.name }}</label>
                    </div>
                {% endfor %}
            
            {% endfor %}
            </div>
        
    </div>
</div>

{#<input type="hidden" name="{{ formName }}[{{ specialization.id }}][specialization]" value="{{ specialization.id }}" />#}
<input type="hidden" name="{{ formName }}[{{ specialization.id }}][{{form.children._token.vars.name}}]" value="{{ form.children._token.vars.value }}" />

<div class="accordion tooltip-wrap" id="accordion">
    {% for specialization in specializations %}
    <div class="accordion-group">
        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-target="#collapse{{ specialization.id }}">
                <i class="icon-plus-sign pull-right"></i>
                <img src="{{ specialization.media ? specialization_media_src(specialization.media) : imageplaceholder.specializationDefaultLogo }}" class="pull-left">
                <h4>{{ specialization.name }}</h4>
            </a>
        </div>
        <div id="collapse{{ specialization.id }}" data-specialization="{{ specialization.id }}" class=" collapse">
            <div id="{{ 'panel' ~ specialization.id }}" class="accordion-inner" data-loaded="0">
                <div class="align-center"><img src="{{ imageplaceholder.loading }}"/></div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>