<section class="section action-info hca-main-profile">
    <div class="hca-display">
        <a class="btn btn-misc btn-default pull-right btn-edit" href="#description" onclick="InstitutionMedicalCenter.openProfileForm($(this)); return false;">  Edit </a>
        <div class="show">
            <h3> About your Clinic </h3>
            <p><span id="clinicDescriptionText">{{ institutionMedicalCenter.description | raw }} </span></p>
        </div>
        <div class="row-fluid hca-edit-box" style="display:none;" id="description">
        <button class="btn btn-misc btn-default pull-right btn-edit" onclick="InstitutionMedicalCenter.closeProfileForm($(this)); return false;">x</button>
            <h3> Clinic Description
                <a href="#"> <i class="icon-info-sign icon-1x pull-right"> </i> </a>
            </h3>
            {% include 'InstitutionBundle:Widgets:institutionMedicalCenter.editProfileModalForm.html.twig' 
                 with {formId: 'descriptionForm', fields: ['description']} 
            %}
        </div>
    </div>
</section>

<section class="section action-info hca-main-profile">
    <div class="hca-display">
        <a class="btn btn-misc btn-default pull-right btn-edit" href="#address" onclick="InstitutionMedicalCenter.openProfileForm($(this)); return false;">Edit</a>
        <div class="show">
            <h3> Clinic Address </h3>
            <p> <i class="icon-map-marker"> </i>
                {% set _address = medical_center_complete_address_to_array(institutionMedicalCenter) %}
                <span class="address_column">
                    <span class="address_part "> {{ _address | join(',&nbsp;</span><span class="address_part">') | raw}}</span>
                </span>
            </p>
        </div>
        <div class="row-fluid hca-edit-box" style="display:none;" id="address">
            <button class="btn btn-misc btn-default pull-right btn-edit" onclick="InstitutionMedicalCenter.closeProfileForm($(this)); return false;">x</button>
            <h3> Clinic Address
                <span class="tooltip-wrap hca-edit"> <i class="icon-info-sign"></i>
                    <span class="tooltip-content hca-edit pull-left"> <i class="icon-map-marker icon-2x pull-left"> </i>
                        Providing your complete address helps us push you to the right searches, and helps patients plan their travel better.
                    </span>
                </span>
            </h3>
             <div class="control-group">
                <input type="radio" name="request" id="inquiry" class="pull-left" data-toggle="#addressContainer" onclick="InstitutionMedicalCenter.hideAddressContainer($(this));" checked>
                <label for="different-address-clinic"> Same address as Hospital </label>
                 <p>
                    {% set _address = institution_address_to_array(institution) %}
                    <span class="address_column">
                        <span class="address_part "> {{ _address | join(',&nbsp;</span><span class="address_part">') | raw}}</span>
                    </span>
                </p>
            </div>
            <hr>
            <div class="control-group">
                <input type="radio" name="request" id="inquiry" class="pull-left " data-toggle="#addressContainer" onclick="InstitutionMedicalCenter.toggle($(this));">
                <label for="different-address-clinic"> Different Address  </label>
            </div>
            <div id="addressContainer" style="display: none;">
                {% include 'InstitutionBundle:Widgets:institutionMedicalCenter.editProfileModalForm.html.twig' 
                     with {formId: 'addressForm', fields: ['address']} 
                %}
            </div>
        </div>
    </div>
</section>

<section class="section action-info hca-main-profile">
    <div class="hca-display">
       <a class="btn btn-misc btn-default pull-right btn-edit" href="#contactNumber" onclick="InstitutionMedicalCenter.openProfileForm($(this)); return false;">Edit</a>
       <div class="show">
            <h3> Clinic Contact Details </h3>
              <div class="activity-feeds">
                <p> <i class="icon-globe"> </i> http://www.
                    <b id="profileWebsitesText">  {{institutionMedicalCenter.websites}} </b>
                </p>
                <p> <i class="icon-envelope"> </i>
                    Email: <strong> <span id="profileEmailText"> {{institutionMedicalCenter.contactEmail}}</span>  </strong>
                </p>
                <p> <i class="icon-phone"> </i>
                    Contact Number:
                    <strong><span id="PhoneNumberText"> {{ render_institution_medical_center_contact_number(institutionMedicalCenter) }} </span> </strong>
                </p>
            </div>
        </div>
        <div class="row-fluid hca-edit-box" style="display:none;" id="contactNumber">
