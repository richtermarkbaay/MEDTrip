{% for doctor in doctors %}
	<tr id="doctor_id_{{ doctor.id }}">
		<td>{{ doctor.lastName }}, {{ doctor.firstName }}</td>
		<td>
		{% for specialization in doctor.specializations %}
		    {{ specialization.name |title }} 
		    {% if loop.last == false %},{% endif %} 
	    {% else %} 
		    No Specializations yet
		{% endfor %}
		</td>
	    <td>
	     <div class="post-toolbar treatment_action">
    		<i class="icon-trash" title="Delete"></i>
    		<a data-toggle="modal" data-id="{{ doctor.id }}" data-target="#specialistModal"  onclick="InstitutionMedicalCenter.showSpecialistCommonModalId(this); return false;"  href="#">Delete</a>
    		<i class="icon-edit" title="Edit"></i>
    		<a href="{{ path('institution_manageDoctorProfile', { 'imcId':institutionMedicalCenter.id,'idId' :doctor.id }) }}" href="#">Edit</a>
    	
    	</div>
	    </td>
	</tr>
{% endfor %}