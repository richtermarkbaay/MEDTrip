<div class="specializations_block" id="specialization_block_{{ institutionSpecialization.id }}">
    {% set _deleteSpecializationModalId = 'deletespecializationmodal_' ~ institutionSpecialization.id %}
     <div class="maincontentblock">
        <h4 class="pull-left">{{ institutionSpecialization.specialization.name |title}}</h4>
        <div class="editname2 delete-link-container pull-left">
			<i title="Delete" class="icon-trash"></i>
			<a data-target="#{{ _deleteSpecializationModalId }}" onclick="InstitutionMedicalCenter.showCommonModal(this); return false;" role="button" title="" href="#">
			    <small>Delete</small>
		    </a>
		</div>
		
		<div id="{{ _deleteSpecializationModalId }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		    {% include 'InstitutionBundle:Widgets:modal.deleteSpecialization.html.twig' with {
		            'institutionSpecialization' : institutionSpecialization,
		            'form' : commonDeleteForm
		        }
		    %}
		</div>
		
	</div>
    <div class="maincontentblock">
	    <table class="table table-striped table-bordered bootstrap-datatable">
	        <tbody>
	            {% for _treatment in institutionSpecialization.treatments %}
				<tr>
					<td>{{ _treatment.name |title }}</td>
					<td>
						<div class="post-toolbar">
							<i class="icon-trash" title="Delete"></i>
							<a href="#deletetreatment" title="" role="button" data-toggle="modal">Delete</a>
						</div>
					</td>
				</tr>
				{% else %}
				<tr>
				    <td colspan="2">This specialty has no treatments yet</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
    </div>
 </div>