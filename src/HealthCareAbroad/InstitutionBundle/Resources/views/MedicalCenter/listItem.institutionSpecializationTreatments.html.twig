    <div class="hca-specialization-details hca-edit">
        <a ><i class="icon-remove-sign pull-right"></i></a>
        <a id="specialization-button" data-href="{{ path('institution_ajax_loadInstitutionMedicalCenterSpecializationComponents', { imcId: institutionMedicalCenter.id, specializationId: each.specialization.id }) }}" data-target="#panel{{ each.specialization.id }}" onclick="InstitutionSpecialization.showAddTreatmentsForm($(this));return false;">
        <i class="icon-edit pull-right"></i></a>
        <a style="display:none;" id="treatments-save"  data-target="#panel{{ each.specialization.id }}" onclick="InstitutionSpecialization.submitAddTreatmentsForm($(this));return false;">
        <i class="icon-ok pull-right"></i></a>
        <span>
            {% if each.specialization.media %}
                <img src="{{ specialization_media_src(each.specialization.media) }}" class="pull-left">
            {% else %}
                <img src="" class="pull-left" style="border: 1px solid #ccc; display: inline-block; height: 35px; width: 35px;margin: -4px 5px 0 0;">
            {% endif %}
        </span>
        <b>{{ each.specialization.name }}</b>
    </div>
    <div id="treatment_list">
     {% include 'InstitutionBundle:MedicalCenter:list.treatments.html.twig'  %}
     </div>
    <div id="hca-specialization-content" class="row-fluid terms" data-specialization="{{ each.specialization.id }}" data-href="{{ path('institution_ajax_loadInstitutionMedicalCenterSpecializationComponents') }}">
       <form name="specializationsForm" id="panel{{each.specialization.id }}"  action="{{ path('institution_ajax_loadInstitutionMedicalCenterSpecializationComponents', { imcId: institutionMedicalCenter.id, specializationId: each.specialization.id }) }}" method="post">
              <center><img src="/images/institution/spinner_large.gif" /></center>
        </form>
    </div>

