<div class="specializations_block" id="specialization_block_{{ institutionSpecialization.id }}">
    {% set _editSpecializationModalId = 'editspecializationmodal_' ~ institutionSpecialization.id %}
    {% set _editSpecializationUri = path('institution_medicalCenter_ajaxEditSpecialization', {'imcId':institutionMedicalCenter.id, 'isId':institutionSpecialization.id} ) %}
     <div class="maincontentblock">
        <h4 class="pull-left specialization_name_{{ institutionSpecialization.id }}">{{ institutionSpecialization.specialization.name }}</h4>
        <div class="editname2 pull-left">
            <i class="icon-pencil" title="Edit"></i>
            <a data-target="#{{ _editSpecializationModalId }}" href="{{ _editSpecializationUri }}" onclick="InstitutionSpecialization.showAddTreatmentsForm(this); return false;"><small>Add Treatments</small></a>
        </div>
        <div class="editname2 pull-left">
            <i title="Delete" class="icon-trash"></i>
			<a data-target="#deleteSpecialization{{ institutionSpecialization.id }}" data-id="{{ institutionSpecialization.id }}" onclick="InstitutionMedicalCenter.showCommonSpecializationModal(this); return false;" role="button" title="" href="#">
			    <small>Delete</small>
		    </a>
		</div>
		
		<div id="deleteSpecialization{{ institutionSpecialization.id }}" class="modal hide fade modal-box" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		    {% set _commonDeleteCsrfTokenWidget = _commonDeleteCsrfTokenWidget is defined ? _commonDeleteCsrfTokenWidget : form_widget(commonDeleteForm._token) %}
		    {% include 'InstitutionBundle:Widgets:modal.deleteSpecialization.html.twig' with {
		            'institutionSpecialization' : institutionSpecialization
		        }
		    %}
		</div>
		
		<div id="{{ _editSpecializationModalId }}" class="modal add_treatments_modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		    <div class="modal-header">
		        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">x</button>
		        <h3>Add {{ institutionSpecialization.specialization.name }} treatments</h3>
		    </div>
		    <div style="max-height: 350px;" class="modal-body" >
		        <span class="ajax_loader"><img src="{{ asset('images/institution/loading.gif') }}" /></span>
		        <div class=" ajax_content_container"></div>
		    </div>
		    <div class="modal-footer">
		        <button aria-hidden="true" data-dismiss="modal" class="btn">Cancel</button>
		        <button onclick="InstitutionSpecialization.submitAddTreatmentsForm(this); return false;" class="btn btn-primary submit_button" disabled="disabled">Submit</button>
		    </div>
		</div>
		
	</div>
    <div class="maincontentblock">
	    <table class="table table-striped table-bordered bootstrap-datatable">
	        <tbody class="institution_specialization_treatments_container">
	            {% include 'InstitutionBundle:MedicalCenter:list.treatments.html.twig' %}
			</tbody>
		</table>
    </div>
    	
	<div id="treatmentModal" class="modal hide fade modal-box" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    	{% set _commonDeleteCsrfTokenWidget2 = _commonDeleteCsrfTokenWidget is defined ? _commonDeleteCsrfTokenWidget : form_widget(comdmonDeleteForm._token) %}
    	<div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
            <h3>Delete Treatment</h3>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete
            	<strong></strong>
            </p>
        </div>
        <div class="modal-footer">
            <form action="{{ path('institution_medicalCenter_ajaxRemoveSpecializationTreatment', {'imcId': institutionMedicalCenter.id, isId: institutionSpecialization.id }) }}" id="treatmentDeleteForm">
                {{ _commonDeleteCsrfTokenWidget2 | raw }}
                <input type="hidden" name="tId" id="tId" value=""/>
                 <button class="btn" aria-hidden="true" data-dismiss="modal" class="btn">Cancel </button>
        	    <button data-loading-text="Processing..." class="btn btn-danger delete-button" type="button" onclick="InstitutionMedicalCenter.submitRemoveSpecializationTeatmentForm(this); return true;">Delete</button>
            </form>
        </div>
	</div>    
    
    
 </div>
