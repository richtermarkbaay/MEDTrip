
<div class="tabbed-medical-procedure-type-detail" >
    
    <div class="details">
        <label>Description:</label>
        {{ institutionMedicalProcedureType.description }}
    </div>
    
    
    <a onclick="return InstitutionMedicalCenter.addProcedure($(this));" class="button-type" href="{{ path('institution_medicalProcedureType_addMedicalProcedure', {'imptId': institutionMedicalProcedureType.id}) }}">Add Procedure</a>
    
    <table class="generic-table" id="medical-procedures-list">
    	<tr>
    		<th class="table-header-repeat line-left minwidth-1" width="200px"><a href="#">Procedures</a></th>
    		<th class="table-header-repeat line-left minwidth-1"><a href="#">Description</a></th>
    		<th class="table-header-options line-left" width="50"><a href="#">Options</a></th>
    	</tr>
    
        {% for procedure in institutionMedicalProcedureType.institutionMedicalProcedures %}
    		{% set medicalProcedure = procedure.medicalProcedure %}
    		<tr>
    			<td>{{ medicalProcedure.name }}</td>
    			<td>{{ procedure.description }}</td>  
    			<td>
    				<a onclick="return InstitutionMedicalCenter.editProcedure($(this));" href="{{ path('institution_medicalProcedureType_editMedicalProcedure', {'imptId': institutionMedicalProcedureType.id, 'impId':procedure.id} ) }}" title="Edit {{ medicalProcedure.name }}" class="icon-1 add-edit-procedure"></a>
    			</td>
    		</tr>
    	{% else  %}
    		<tr><td colspan="3" class="empty-list">No Medical Procedures yet!</td></tr>
    	{% endfor %}
    </table>
    
</div>
