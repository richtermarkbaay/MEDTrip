{% extends 'InstitutionBundle::layout.html.twig' %}
{% set mainNavigation = {selected: 'medical_centers'} %}
{% block content %}

<section id="content">
			<div class="container">
				<div class="row">
					<div class="span12">
						<div class="pull-right">
							<a href="{{ path('institution_medicalCenter_add') }}" class="btn btn-success btn-large">Create New Listing</a>
						</div>
						<h1><span>Medical Listing</span></h1>
								
						{% if app.session.hasFlash('notice') %}
                    		{% include '::notice.admin.html.twig' with {'class': 'notice', 'message':  app.session.flash('notice') } %}
               			{% endif %}
						<table class="table table-striped table-bordered bootstrap-datatable">
							<thead>
								<tr>
									<th class="span3">Clinic</th>
									<th>Clinic Info Details</th>
									<th class="span3">Posting Details</th>
									<th class="span3">Actions</th>
								</tr>
							</thead>
							<tbody>
							
							    {% set even = false %}
                				{% for medicalCenter in medicalCenters %}
            				    <tr class="{{ even ? 'alternate-row' : ''}}">
                					<td> <a href="{{ path('institution_medicalCenter_edit', {imcId:medicalCenter.id}) }}" title="View"><strong> {{ medicalCenter.name | title }}</strong></a></td>
                					<td>{{ medicalCenter.description(30) | raw }}</td>
                					<td>Created on {{ medicalCenter.dateCreated|date("m/d/Y") }}</td>
                					<td class="options-width">
                    					<a href="{{ path('institution_medicalCenter_edit', {imcId:medicalCenter.id}) }}" title="Edit" class="icon-1 info-tooltip">Edit</a>
                					</td>
                				</tr>
                				{% set even = even ? false : true %}    
            					{% endfor %}
							</tbody>
						</table>
					</div><!--End of addnewclinic-->
				</div><!--End of row-->
			</div><!--End of container-->
		</section>
{% endblock %}
