<div id="{{ modal.id }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h3 id="myModalLabel">{{ modal.title }}</h3>
    </div>
    
    <div class="modal-body">{% block modalBody %}{% endblock %}</div>
    <!-- end modal-body -->
    
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-primary">Submit</button>
    </div>
</div>
 <!-- End Modal Clinic Address -->