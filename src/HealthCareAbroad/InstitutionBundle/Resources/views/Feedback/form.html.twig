{% extends 'InstitutionBundle::layout.html.twig' %}
{% set selectedTab = 'feedback'%}
{% block content %}
     
<div class="span12 marginleft0">
    {% include 'InstitutionBundle:Widgets:dashboard.welcome.html.twig' %}
    
    <div class="span9 marginleft0">
        <div id="maincontent">
            <div class="heading2">
                <div class="heading_text2">
                    Feedback
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <form action="#" id="signinForm" method="POST" class="form">                        
                <fieldset>
                    <div>
                        <label for="subject">Subject
                        </label>
                        <input name="subject" type="subject" id="subject" value="" class="span8" />
                        <!--<ul>
                            <li>Please enter your Subject.</li>
                        </ul>-->
                    </div>
                                            
                    <div>
                        <label for="Message">Message</label> 
                        <textarea name="Message" class="span8" rows="5" cols="60"></textarea><!--<ul>
                        <li>Please write your message.</li>
                        </ul>-->
                    </div>
                        
                    <div>
                        <label for="Message">Sent to:</label> 
                        <label><input type="radio" name="tab" value="pkfrom" class="div1" style="margin-right:5px;" />within your Network</label>
                        <label><input type="radio" name="tab" value="pkfrom" class="div2" style="margin-right:5px;"/>HCA people support</label>
                    </div>
                    <br>
                    <input type="submit" name="Submit" value="SEND Feedback" class="span2 btn-medium btn-info" />
                    <input type="submit" name="Submit" value="Cancel" class="span2 btn-medium btn" />
                    
                </fieldset>
            </form> 
        </div>
    </div>
  
    <!-- dashboard sidebar -->
    <div class="span3">
        {% include 'InstitutionBundle:Widgets:dashboard.sidebarLabel.html.twig' %}
    </div>
</div>

{% endblock %}