<!--  Institution Description -->
<section class="section action-info hca-main-profile">
    <div class="hca-display">
        <a class="btn btn-misc btn-default pull-right btn-edit" href="#description" data-toggle="show-about" onclick="InstitutionProfile.openProfileForm($(this)); return false;">Edit</a>
        <div class="show" id="show-about">
            <h3> Description </h3>
            <p class="hca-helptext" id="institutionDescriptionText"> {{ institution.description }} </p>
        </div>
        <div class="row-fluid hca-edit-box" style="display:none;" id="description">
            <a class="btn btn-link pull-right" href="#description" data-toggle="show-about" onclick="InstitutionProfile.closeProfileForm($(this)); return false;"> <i class="icon-remove"> </i></a>
           <h3> Description </h3>
            {% include 'InstitutionBundle:Widgets:institution.editProfileModalForm.html.twig' 
                 with {formId: 'descriptionModalForm', fields: ['description']} 
            %}
        </div>
   </div>
</section>
<!--  Institution Address -->
<section class="section action-info hca-main-profile">
    <div class="hca-display">
        <a id="institution-edit-address-toggle" class="btn btn-misc btn-default pull-right btn-edit" href="#address" data-toggle="show-address" onclick="InstitutionProfile.openProfileForm($(this)); return false;">Edit</a>
        <div class="show" id="show-address">
            <h3>  Address 
            </h3>
            <div>
                <span class="icon-map-marker"> </span>
                {% set _address = institution_address_to_array(institution) %}
                <span class="address_column">
                    <span class="address_part "> {{ _address | join(',&nbsp;</span><span class="address_part">') | raw}}</span>
                </span>
            </div>
        </div>
        <div class="row-fluid hca-edit-box" style="display:none;" id="address">
           <a class="btn btn-link pull-right" href="#address" data-toggle="show-address" onclick="InstitutionProfile.closeProfileForm($(this)); return false;"> <i class="icon-remove"> </i></a>
           <h3> Address
                <span class="tooltip-wrap hca-edit">
                    <i class="icon-info-sign"> </i>
                    <span class="tooltip-content hca-edit pull-left">
                        <i class="icon-map-marker icon-2x pull-left"> </i>
                        Providing your complete address helps us push you to the right searches, and helps patients plan their travel better.
                    </span>
                </span>
            </h3>
            {% include 'InstitutionBundle:Widgets:institution.editProfileModalForm.html.twig' 
                 with {formId: 'addressModalForm', fields: ['address1','country','city','state','zipCode'], modalId: 'addressModal', modalTitle: 'Edit Address'} 
            %}
        </div>
    </div>
</section>
<!-- Modal Number -->
 <section class="section action-info hca-main-profile">
     <div class="hca-display">
        <a class="btn btn-misc btn-default pull-right btn-edit" href="#number" data-toggle="show-contact" onclick="InstitutionProfile.openProfileForm($(this)); return false;">Edit</a>
        <div class="show" id="show-contact">
            <h3> Contact Details </h3>
            <div id="alertDiv" class="{{ institution.websites ? '' :'alert alert-block' }}">
                <p> <i class="icon-globe"> </i>
                     <span id="profileWebsitesText"> 
                     {% set _website = get_website_from_array(institution.websites)  %}
                        {% if _website %}
                           http://www.
                           <b >{{_website}} </b>
                        {% else %}
                            <b> no hospital website </b> added.
                            <a onclick="InstitutionProfile.openWebsiteFormButton($(this)); return false;" class="btn btn-primary btn-small" href="#number" ><i class="icon-plus"></i> Add Hospital Website</a>
                        {% endif %}
                    </span>
                </p>
                <p> <i class="icon-envelope"> </i>
                    Email: <strong> <span id="profileEmailText"> {{institution.contactEmail}}</span>  </strong>
                </p>
                {% set _contactDetails = render_institution_contact_details(institution) %}
                {% if _contactDetails is not null %}
                    {% for contactDetail in _contactDetails %}
                        <p> <i class="icon-phone"> </i>
                        {% if(contactDetail.type == 'Phone') %}
                            Phone Number:    
                        {% elseif(contactDetail.type == 'Mobile') %}
                            Mobile Number:
                        {% else %}
                            Fax:
                        {% endif %}
                            <strong><span id="{{contactDetail.type}}NumberText"> {{ contactDetail.number}}  </span> </strong>
                    {% endfor %}
                {% else %}
                    <p> <i class="icon-phone"> </i>Phone
                    <strong><span id="profileNumberText">   </span> </strong>
                    </p>
                {% endif %}  
                </p>
            </div>
        </div>
        <div class="row-fluid hca-edit-box" style="display:none;" id="number">
            <a class="btn btn-link pull-right" href="#number" data-toggle="show-contact" onclick="InstitutionProfile.closeProfileForm($(this)); return false;"> <i class="icon-remove"> </i></a>
            <h3> Contact Details 
                 <span class="tooltip-wrap hca-edit">
                    <i class="icon-info-sign"> </i>
                    <span class="tooltip-content hca-edit pull-left">
                        <i class="icon-phone-sign icon-2x pull-left"> </i>
                        This is how we will contact you to let you know about potential leads. Please provide the correct phone numbers and email addresses to make sure
                        you don't miss any inquiries that may come through <b> HealthcareAbroad </b>. <br>
                    </span>
                </span>
            </h3>
            {% include 'InstitutionBundle:Widgets:institution.editProfileModalForm.html.twig' 
                 with {formId: 'numberModalForm', fields: ['contactDetails','contactEmail'], modalId: 'numberModal', modalTitle: 'Edit Number'} 
            %}
        </div>
    </div>
</section>

<!-- Modal Social media sites -->
<section class="section action-info hca-main-profile">
     <div class="hca-display">
        <a class="btn btn-misc btn-default pull-right btn-edit" href="#socialMedia" data-toggle="show-social" onclick="InstitutionProfile.openProfileForm($(this)); return false;">Edit</a>
        <div class="show" id="show-social">
            <h3> Social Media </h3>
            <div id="soclialMediaText" class="">
