{% extends 'InstitutionBundle::layout.html.twig' %}
{% set mainNavigation = {selected: 'profile'} %}
{% block content %}
    {% embed 'InstitutionBundle:Embed:contentWrapper.authenticated.html.twig' %}
        {% block wrappedContent %}
           <section id="content">
            	<div class="container">
            		<div class="row">
            			<div class="span9">
            				 {% include 'InstitutionBundle:Widgets:medicalCenter.profileHeader.html.twig' %}
                            
                            <div class="tabbable">
                                {% include '::stepHolderClient.base.admin.html.twig' with {
                                    steps: [
                                        {title: 'Specializations', 'selected': false, path: 'institution_account_profile'},
                                        {title: 'Services', 'selected': false, path: 'institution_account_profile_service'},
                                        {title: 'Awards', 'selected': false, path: 'institution_account_profile_awards'},
                                        {title: 'Medical Specialist', 'selected': true, path: 'institution_account_profile_specialist'},
                                    ] }
                                %}
                               <div id="pane4" class="tab-pane">
									<table class="table table-striped table-bordered bootstrap-datatable">
										<thead>
											<tr>
												<th>Medical Specialist</th>
												<th>Specializations</th>
												<th>Actions</th>
											</tr>
										</thead>
										<tbody>
											<tr>
												<td>
													<strong>Lastname, Firstname</strong>
												</td>
												<td>
													<div>
														<p>Specializations1, Specializations2</p>
													</div>
												</td>
												<td>
													<i class="icon-pencil" title="Edit"></i>
													<a href="manage-doctor-profile.html">Edit Doctor's Profile</a>|
													<i class="icon-trash" title="Delete"></i>
													<a href="#deletespecialist" title="" role="button" data-toggle="modal">Delete</a>
												</td>
											</tr>
										</tbody>
									</table>
									<div class="pull-right">
										<a href="#addspecialists" title="" role="button" data-toggle="modal" id="addAnotherSpecialization" class="btn btn-success btn-medium">Add Another Medical Specialist</a>
									</div>
								</div>
                            </div>
                        </div>
                        <div class="span3">
						    <div class="sidebar">
                                    {% include 'InstitutionBundle:Widgets:sidebar.benefitsShowcase.html.twig' %}
                                 {% include 'InstitutionBundle:Widgets:sidebar.mediaGallery.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endblock %}
    {% endembed %}

{% endblock %}
