{% extends 'InstitutionBundle::layout.html.twig' %}
{% set mainNavigation = {selected: 'profile'} %}
{% block content %}
    {% embed 'InstitutionBundle:Embed:contentWrapper.authenticated.html.twig' %}
        {% block wrappedContent %}
			<div class="span9">
				 {% include 'InstitutionBundle:Widgets:medicalCenter.profileHeader.html.twig' %}
                
                <div class="tabbable">
                    {% include '::stepHolderClient.base.admin.html.twig' with {
                        steps: [
                            {title: 'Specializations', 'selected': true, path: 'institution_account_profile'},
                            {title: 'Services', 'selected': false, path: 'institution_account_profile_service'},
                            {title: 'Awards','selected': false, path: 'institution_account_profile_awards'},
                            {title: 'Medical Specialist', 'selected': false, path: 'institution_account_profile_specialist'},
                        ] }
                    %}
                    <div class="tab-content">
                        <div id="pane1" class="tab-pane active">
                			<div class="row-fluid">
                			    {% set even = false %}
		                        {% for institutionSpecialization in institutionSpecializations %}
                				<div id="Specializationdetails">
                					<div class="maincontentblock">
            						<h4 class="pull-left">{{ institutionSpecialization.specialization.name }}</h4>
            						<div class="editname2 pull-left">
            							<i class="icon-trash" title="Delete"></i>
            							<a href="#deletespecializationname" title="" role="button" data-toggle="modal"><small>Delete</small></a>
            						</div>
                					</div>
                					<div class="maincontentblock">
                						<table class="table table-striped table-bordered bootstrap-datatable" id="specializationList">
                							<tbody>
                							 {% for treatment in institutionSpecialization.treatments %}
                								<tr class="{{ even ? 'alternate-row' : ''}}">
                									<td>{{ treatment.name }}</td>
                									<td>
                										<div class="post-toolbar">
                											<i class="icon-trash" title="Delete"></i>
                											<a href="#deletetreatment" title="" role="button" data-toggle="modal">Delete</a>
                										</div>
                									</td>
                								</tr>
                								 {% endfor %}
                							</tbody>
                						</table>
                					</div>
                				</div>
            					{% set even = even ? false : true %}    
	                            {% endfor %}
                				<div class="pull-right">
                					<a href="#addspecializations" title="" role="button" data-toggle="modal" id="addAnotherSpecialization" class="btn btn-success btn-medium">Add Another Specialization</a>
                				</div>
                			</div>
                		</div>
                    </div><!-- /.tab-content -->
                </div>
            </div>
            <div class="span3">
			    <div class="sidebar">
                        {% include 'InstitutionBundle:Widgets:sidebar.benefitsShowcase.html.twig' %}
                     {% include 'InstitutionBundle:Widgets:sidebar.mediaGallery.html.twig' %}
                </div>
            </div>
        {% endblock %}
    {% endembed %}

{% endblock %}
	    
