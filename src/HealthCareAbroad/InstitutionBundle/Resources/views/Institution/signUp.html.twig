{% extends 'InstitutionBundle::unauthenticated.layout.html.twig' %}

{% block title %} Client Sign-up {% endblock %}

{% block content %}
    {% embed 'InstitutionBundle:Widgets:contentWrapper.html.twig' 
        with {'pageTitle': 'Create an Account'} 
    %}
        
        {% block wrappedContent %}
            <form novalidate action="{{ path('institution_signUp') }}" id="signupForm" method="POST" class="form">
                <fieldset>
                    <div>
                        <label for="institution_name"><b>Name of the Institution</b></label>
                        {{ form_widget(form.name, { 'attr': {'class': 'institution_name span11'} }) }}
                    </div>
                    
                    <div>
                        <label for="password">Types of Institution</label>
                        {% for key, type in institutionTypes %}
                            <label>
                                <input {{ key == selectedInstitutionType ? 'checked' : '' }} type="radio" name="institutionType" value="{{ key }}" class="div1" /> {{ type }}
                            </label>    
                        {% endfor %}
                    </div>
                    
                    <hr>
                    <h4>Create USER account.</h4>
                    <div>
                    <label for="username">Email 
                        <span>
                            <small>&nbsp;(your OWN email NOT the email of the institution)</small>
                        </span>
                    </label>
                        {{ form_widget(form.email, { 'attr': {'class': 'span9'} }) }}
                    </div>
                    
                    
                    {{ form_row(form.password, { 'attr': {'class': 'span8'} }) }}
                            
                    {{ form_row(form.confirm_password, { 'attr': {'class': 'span8'} }) }}
                    
                    <br/>
                    
                    <label>
                        {{ form_widget(form.agree_to_terms) }} I read and agree the <a href="#">Terms and Conditions</a>.
                    </label>
                    
                    <input type="submit" name="Submit" value="SIGN-UP" class="span6 btn-large btn-primary" />
                </fieldset>
            </form>
            
            <div id="modal">
                <a href="#" title="" class="close">X</a>
                <div class="span12">
                    <h4>Thank you for creating an account in Health Care Abroad</h4>
                </div>
            </div>
        {% endblock %}
        
        {% block sideBox %}
        <div class="span4">
            <div class="aside">
                <div class="aside box">
                    <p>Please provide the correct information below, and we will create an exclusive medical account listing for you.</p>
                </div>
            </div>
            <!-- End of aside-->
        </div>
        <!--End of span4-->
    {% endblock %}
        
    {% endembed %}
                                            
    
    
{% endblock %}