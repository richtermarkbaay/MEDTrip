<section class="section institution-info">
    <h2>Basic Information<br><small>Basic information about the {{ label }} you are adding.</small></h2>
    <div class="row-fluid">
        <div class="span12">
             <div class="control-group {{ (form.name.vars.valid ? '' : 'error') }}">
                <label for="institution-name">Name of the {{ label }}</label>
                {{ form_widget(form.name, { 'attr': {'class': 'span12'} }) }}
            </div>
            <div class="control-group">
                <label for="website">Description <small>(Optional)</small></label>
                {{ form_widget(form.description, { 'attr': {'class': 'span12'} }) }}
                <div class="description"><small>you can edit / add Description later</small></div>
            </div>
            <div class="control-group">
                <label for="network-group">
                    Is this {{ label }} part of a larger {{ label }} group with branches in multiple locations?<br/>
                    If so, please name the group/network. <small>( Optional )</small>
                </label>
                <input type="text" id="network-group" class="span12" placeholder="Leave blank if none">
            </div>
        </div>
    </div>
</section>