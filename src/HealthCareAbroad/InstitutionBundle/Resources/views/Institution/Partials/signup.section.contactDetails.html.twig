<section class="section institution-info">
    <h2>
        {{ label }} Contact Details<br>
        <small> This is your hospital's contact details. asdPlease be as detailed as possible. </small>
    </h2>
    <div class="row-fluid tooltip-wrap">
        <div class="span12">
            <div class="tooltip-content">
                <i class="icon-lightbulb icon-2x pull-left"></i>This is how we will contact you to let you know about potential leads.  Please provide the correct phone numbers and email addresses to make sure you don't miss any inquiries that may come through HealthcareAbroad.
            </div>
             <div class="contactEmail control-group span5 {{ (form.contactEmail.vars.valid ? '' : 'error') }}">
                    <label for="{{ form.children.contactEmail.vars.id }}">
                        {{ form.children.contactEmail.vars.label }}
                    </label>
                    {{ form_widget(form.contactEmail, { 'attr': {'class': 'span12'} }) }}
                </div>
              <div class="contactDetails control-group span5">
                    {% for _widget in form.contactDetails %}
                        {{ form_widget(_widget, { 'attr': {'class': 'span12'} }) }}  
                    {% endfor %}
            </div>
            <div class="control-group website">
                <div class="span12">
                    <label for="institution_profile_form[websites]">{{ label }} Website</label>
                    <span class="pull-left"> http:// </span>
                    {{ form_widget(form.websites, { attr: {class: 'span11'} } )}}
                </div>
            </div>
        </div>
    </div>
</section>