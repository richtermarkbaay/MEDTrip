{% embed 'InstitutionBundle:Embed:modalBox.base.html.twig' with {'modal': {'id' : 'add-doctor', class: 'hca-doctors-modal', 'title': 'Search and Add Doctor' }} %}
    {% block modalBody %}
        <div class="alert alert-info">
            <i class="icon-user-md icon-4x pull-left"></i>
            Knowing who will administer their procedures is a primary concern for patients. Quite often, access to good doctors is the main reason for their decision to travel abroad for treatment.
        </div>
        <form id="doctorForm" action="{{ addDoctorFormAction }}" method="post">
            <div class="row-fluid">
                <div class="control-group span6">
                    {{ form_row(doctorForm.lastName, { 'attr': {'class': 'span12'} }) }}
                </div>
                <div class="control-group span6">
                    {{ form_row(doctorForm.firstName, { 'attr': {'class': 'span12'} }) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="control-group span6">
                    {{ form_row(doctorForm.middleName, { 'attr': {'class': 'span12'} }) }}
                </div>
                <div class="control-group span6" style="position: relative">

                    {{ form_row(doctorForm.suffix, { 'attr': {'class': 'span5'} }) }}
                    <button id="add-doctor-btn" type="submit" class="btn pull-right btn-primary btn-large" style="position:absolute;right:0;top:23px;display:none"><i class="icon-plus-sign-alt"></i><span>Add Doctor</span></button>
                    <button id="search-doctor-btn" type="button" class="btn pull-right btn-success btn-large" style="position:absolute;right:0;top:23px;" ><i class="icon-search"></i><span>Search Doctor</span></button>
                </div>
            </div>

            {{ form_widget(doctorForm._token) }}
        </form>

        <section id="doctor-search-results" class="doctors-listing" style="display:none">
            <hr>
            <h3>Search Results</h3>
            <div class="alert results notEmpty">
                Below are the search results for Dr. <span id="doctor_criteria_name"> </span>. Please select the correct doctor. <br>
                If the doctor you are adding is not any of the ones listed below, please double-check the name spelling and then click on <b> ADD TO MY CLINIC </b>
            </div>
            <div class="row-fluid">
                <ul id="matchedDoctorList" class="thumbnails"></ul>
            </div>
        </section>
    {% endblock %}
{% endembed %}