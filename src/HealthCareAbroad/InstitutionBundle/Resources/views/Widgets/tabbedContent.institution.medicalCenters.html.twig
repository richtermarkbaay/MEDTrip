{% embed 'InstitutionBundle:Widgets:tabbedContent.base.html.twig' %}
    {% block tabbedContent %}
        <table class="table table-striped table-bordered bootstrap-datatable">
            <thead>
                <tr>
    				<th>Name of Clinic</th>
    				<th>Created on</th>
    				<th>Actions</th>
    			</tr>
            </thead>
			<tbody>
    			  {% set even = false %}
    				{% for medicalCenter in medicalCenters %}
    			    <tr class="{{ even ? 'alternate-row' : ''}}">
    					<td> 
    					    <a href="{{ path('institution_medicalCenter_edit', {imcId:medicalCenter.id}) }}" title="View"><strong> {{ medicalCenter.name | title }}</strong></a>
    					    <div class="medical_center_status">
    					        Status: {{ get_medical_center_status_label(medicalCenter) }}
    					    </div>
					    </td>
    					<td>{{ medicalCenter.dateCreated|date("M d, Y h:i A") }}</td>
    					<td class="options-width">
    					    <i title="Edit" class="icon-pencil"></i>
        					<a href="{{ path('institution_medicalCenter_edit', {imcId:medicalCenter.id}) }}" title="Edit"><small>Edit</small></a>
    					</td>
    				</tr>
    				{% set even = even ? false : true %}    
    				{% endfor %}
		    </tbody>
	    </table>
	     {% if pager.isPaginable %}
                   {{ paginate(pager, 'institution_account_profile', app.request.query.all) }}
                {% endif %}
    {% endblock %}
    
    {% block tabbedContentActionButtons %}
    <div class="pull-right">
        <a class="btn btn-success btn-medium" data-toggle="modal" role="button" title="" href="{{ path('institution_medicalCenter_add' ) }}">
            Add Another Clinic
        </a>
    </div>
    {% endblock %}
{% endembed %}