<form id="{{ formId }}" action="{{ path('institution_medicalCenter_ajaxUpdateProfileByField', {'imcId': institutionMedicalCenter.id} ) }}" style="min-width: 400px;padding: 20px 20px 0;">
    {% for each in fields %}

        {% if each == 'description' %}
            {{ form_widget(institutionMedicalCenterForm[each], { 'attr': {class: 'span12'} })  }}
        {% elseif each == 'address' %}
                        {{ form_widget(institutionMedicalCenterForm.address, {attr: {'class': 'span12'}}) }}
                    <div class="control-group">
                        <div class="span12">
                            {{ form_label(institutionMedicalCenterForm.country) }}
                            {{ form_widget(institutionMedicalCenterForm.country, {attr: {class: 'country_dropdown'} } )}}
                            {{ form_errors(institutionMedicalCenterForm.country) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="span5">
                            {{ form_label(institutionMedicalCenterForm.state) }}
                            {{ form_widget(institutionMedicalCenterForm.state, { attr: {class: 'span12'} } )}}
                            {{ form_errors(institutionMedicalCenterForm.state) }}
                        </div>
                        <div class="span5">
                            {{ form_label(institutionMedicalCenterForm.city)}}
                            {{ form_widget(institutionMedicalCenterForm.city, {label: 'City', attr: {class: 'hca-country pull-left'} } )}}
                            {{ form_errors(institutionMedicalCenterForm.city) }}
                        </div>
                        <div class="span2">
                            {{ form_label(institutionMedicalCenterForm.zipCode)}}
                            {{ form_widget(institutionMedicalCenterForm.zipCode, {label: 'Zip/Mail Code', attr: {class: 'span12'} } )}}
                            {{ form_errors(institutionMedicalCenterForm.zipCode) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(institutionMedicalCenterForm.addressHint)}}
                        {{ form_widget(institutionMedicalCenterForm.addressHint, {attr: {class: 'span12'} } )}}
                        {{ form_errors(institutionMedicalCenterForm.addressHint) }}
                    </div>
         
         {% elseif each == 'contactNumber' or each == 'websites' %}
                <div class="span12">
                    <div class="control-group">
                        <div class="span6">
                            {{ form_label(institutionMedicalCenterForm.contactEmail) }}
                            {{ form_widget(institutionMedicalCenterForm.contactEmail, { attr: {class: 'span12'} } )}}
                        </div>
                            {{ form_widget(institutionMedicalCenterForm.contactNumber) }}
                    </div>
                    <div class="control-group website">
                        <label for="website"> Clinic Website </label>
                        <span class="pull-left"> http:// </span>
                        {{ form_widget(institutionMedicalCenterForm.websites, { attr: {class: 'span11 pull-right'} } )}}
                    </div>
                </div>
        {% elseif each == 'socialMediaSites' %}
             {{ form_widget(institutionMedicalCenterForm.socialMediaSites )}}
        {% elseif each == 'status' %}
            {{ form_widget(institutionMedicalCenterForm[each]) }}
        {% elseif each == 'services' %}
             <div class="control-group">
                 {{ form_widget(institutionMedicalCenterForm.services )}}
             </div>
        {% elseif each == 'awards' %}
             <div class="control-group">
                 {{ form_widget(institutionMedicalCenterForm.awards )}}
             </div>
        {% else %}
            {{ form_row(institutionMedicalCenterForm[each]) }}
        {% endif %}

    {% endfor %}
    
    {{ _csrf_token_widget | raw}}

</form>
<div class="row"> 
    <div class="pull-right">
         <button class="btn btn-primary" onclick="return InstitutionMedicalCenter.submitMedicalCenterSidebarForms(this);">Submit</button>
	</div>
</div>
