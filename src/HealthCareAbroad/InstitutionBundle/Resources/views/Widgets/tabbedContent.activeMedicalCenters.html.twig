{% embed 'InstitutionBundle:Widgets:tabbedContent.base.html.twig' %}
    {% block tabbedContent %}
        <table class="table table-striped table-bordered bootstrap-datatable">
            <thead>
                <tr>
    				<th>Name of Clinic</th>
    				<th>Created on</th>
    				<th>Actions</th>
    			</tr>
            </thead>
			<tbody>
    			  {% set even = false %}
    				{% for medicalCenter in medical_centers %}
    			    <tr class="{{ even ? 'alternate-row' : ''}}">
    					<td> <a href="{{ path('institution_medicalCenter_edit', {imcId:medicalCenter.id}) }}" title="View"><strong> {{ medicalCenter.name | title }}</strong></a></td>
    					<td>Created on {{ medicalCenter.dateCreated|date("m/d/Y") }}</td>
    					<td class="options-width">
        					<a href="{{ path('institution_medicalCenter_edit', {imcId:medicalCenter.id}) }}" title="Edit" class="icon-1 info-tooltip">Edit</a>
    					</td>
    				</tr>
    				{% set even = even ? false : true %}    
    				{% endfor %}
		    </tbody>
	    </table>
    {% endblock %}
    
    {% block tabbedContentActionButtons %}
    <div class="pull-right">
        <a class="btn btn-success btn-medium" data-toggle="modal" role="button" title="" href="{{ path('institution_medicalCenter_add', { 'institutionId': institution.id } ) }}">
            Add Another Clinic
        </a>
    </div>
    {% endblock %}
{% endembed %}