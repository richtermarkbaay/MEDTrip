{% embed 'InstitutionBundle:Embed:modalBox.base.html.twig' with {'modal': {'id' : modalId, 'title': modalTitle }} %}
    {% block modalBody %}

        <form id="{{ formId }}" action="{{ path('institution_ajaxUpdateProfileByField') }}" style="min-width: 400px;padding: 20px 20px 0;">
        
            {% for each in fields %}
                 {% if each == 'logo' %}
                    {{ form_widget(institutionForm[each]) }}
                 {% endif %}
            {% endfor %}
            
            {{ _csrf_token_widget | raw}}
    
        </form>
        <div class="clearfix"></div>
        
                    <div class="modal-footer button-wrapper">
            		<button aria-hidden="true" data-dismiss="modal" class="btn">Cancel</button>
            		<button class="btn btn-primary submit-button" onclick="return InstitutionProfile.submitInstitutionSidebarForms(this);">Submit</button>
            </div>
  
    {% endblock %}
{% endembed %}