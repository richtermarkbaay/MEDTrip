{% extends 'InstitutionBundle::registration.layout.html.twig' %}
{% set disableMainNavigation = true %}
{% set setUpProfile = true %}
                
{% block content %}
    <div class="row">
        <h1>{{ institutionMedicalCenter.name | title }}</h1>
    
        <div class="span8">
            <section class="row-fluid">
                <h2>
                    List of Doctors 
                    <a id="addDoctorButton" href="#add-doctor" class="btn btn-primary btn-large pull-right" data-toggle="modal">Add New Doctor</a>
                </h2>
                
            </section>

            {% include 'InstitutionBundle:MedicalCenter/Widgets:doctorsList.html.twig' %}

            <section id="doneSection" {% if not institutionMedicalCenter.doctors|length %} style="display:none" {% endif %} style="margin-top: 15px;">
                <a href="{{ path('institution_signup_finish') }}" class="btn pull-right btn-success btn-large">Done Adding Doctors</a>
            </section>
        </div>

        <aside class="span4">
            {{ render_signup_steps_by_route(app.request.attributes.get('_route'), isSingleCenter is defined and isSingleCenter) | raw}}
        </aside>
    </div>
{% endblock %}
{% block inlineJavascriptCode %}
<script type="text/javascript">
(function($){
	$(function(){
        {% if institutionMedicalCenter.doctors|length < 1 %}
             $('#add-doctor').modal('show');
        {% endif %} 
	});
})(jQuery);
</script>
{% endblock %}