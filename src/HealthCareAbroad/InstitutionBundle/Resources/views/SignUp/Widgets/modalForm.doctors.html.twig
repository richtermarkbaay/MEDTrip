                            <ul>
                                <li>
                                    <input type="checkbox" name="service" value="service" /> Specialization Name
                                </li>
                                <li>
                                    <input type="checkbox" name="service" value="service" /> Cord Blood Bank
                                </li>
                                <li>
                                    <input type="checkbox" name="service" value="service" /> Home Nursing Service
