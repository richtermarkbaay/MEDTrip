{% extends 'InstitutionBundle::unauthenticated.layout.html.twig' %}
{% block title %} Healthcareabroad Client Login {% endblock %}

{% block content %}
    {% embed 'InstitutionBundle:Embed:contentWrapper.unauthenticated.html.twig' 
        with {'pageTitle': 'Sign-in', 'contentSpanClass': 'span8 marginleft0'} 
    %}
        
    {% block wrappedContent %}
        <div class="span8">
            <form novalidate="novalidate" id="signinForm" action="{{ path('institution_login_check') }}" method="POST" >
                <section class="section account-info">
                    <h2>
                        Client Admin Log-in
                        <br>
                        <small>Log-in to manage your Institution</small>
                    </h2>
                    <div class="row-fluid">
                        <div class="span8">
                            <div class="row-field">
                                <label for="email">
                                    Enter your email address
                                </label>
                                <input type="text" name="_username" id="username" value="{{ last_username }}" placeholder="i.e you@some-domain.com" class="span12">
                            </div>
                            <div class="row-field">
                                <label for="password">
                                    Enter your password
                                </label>
                                <input type="password" name="_password" type="password" id="password" class="span12" />
                            </div>
                            <button class="btn pull-left btn-primary btn-large">
                                Login
                            </button> 
                            <a href="#" class="btn pull-left btn-link btn-large">
                                Forgot your password?
                            </a>
                        </div>
                    </div>
                </section>
		    </form>
        </div><!-- end .span6 -->
        

        <div class="span4">
            <section class="aside-box default">
                <h3>Want to register an Institution?</h3>
                <p class="info-txt">
                    Every day, thousands of patients use the Internet to look for medical treatments.
                </p>
                <p class="info-text"><a href="http://www.healthcareabroad.com/">www.healthcareAbroad.com</a> helps these patients find the clinic that's right for them.</p>
            </section>
            <section class="aside-box default">
            	<a href="{{ path('institution_signUp') }}" class="btn btn-inverse btn-large">
                    Create an Account</a>
                </button>
                <br><br>
                <p>
                    Need some help? <a href="#">Click Here</a>
                </p>
            </section>   
        </div><!--End of span5-->

             
        {% endblock %}
        
    {% endembed %}
    
{% endblock %}
