{% extends 'InstitutionBundle::unauthenticated.layout.html.twig' %}
{% block title %} Reset Password {% endblock %}

{% block content %}
    {% embed 'InstitutionBundle:Embed:contentWrapper.unauthenticated.html.twig' 
        with {'pageTitle': 'Reset Password', 'contentSpanClass': 'span8 marginleft0'} 
    %}
        
    {% block wrappedContent %}
        <div id="content" class="container">
            <div class="row">
                <div class="span6 offset3">
                    {% if (isEmailPassword is defined and isEmailPassword) %}
                    <form action="{{path('institution_reset_password') }}" method="post">
                        <section class="section account-info">
                            <h2>
                                Reset Password
                            </h2>
                            <div class="row-fluid">
                                <div class="span12 control-group">
                                    <div class="control-group">
                                        <label for="email">
                                            Enter your email address and we'll email you password reset instructions
                                        </label>
                                        <input type="text" id="email" name="email" placeholder="" class="span12"
                                        required="">
                                    </div>
                                    <input type="submit" value="Reset Password"
                                    class="btn btn-primary btn-large" />
                                    <a href="{{ path('institution_login') }}" class="btn btn-link btn-large">Cancel</a>
                                </div>
                            </div>
                        </section>
                    </form>
                    {% else %}
                        <form action="{{path('institution_set_new_password', {token: token}) }}" method="post">
                            <section class="section account-info">
                                <h2>
                                    Set New Password
                                </h2>
                                <div class="row-fluid">
                                    <div class="span12 control-group">
                                        <div class="control-group">        
                                            {{ form_row( form.new_password ) }}  
                                            {{ form_row( form.confirm_password ) }}
                                            {{ form_rest(form) }}
                                        </div>
                                        <input type="submit" value="Reset Password" class="btn btn-primary btn-large" />
                                    </div>
                                </div>
                    			
                            </section>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
             
        {% endblock %}
        
    {% endembed %}
    
{% endblock %}
