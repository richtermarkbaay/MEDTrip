{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'manageHcaData' %}
{% set selectedSubTab = 'manage_offered_service' %}
{% set ancilliaryServicesLabel = getClassLabel('ancilliary_service') %}

{% block content %}
    <div class="span3">
    {% include 'AdminBundle:Widgets:subMenu.manageHcaData.html.twig'%}
	</div>
	<div class="span9">
	
		{% embed 'HelperBundle:Widgets:section.html.twig' with { 
                title: ( form.vars.value.id ? 'Edit ' : 'Add ' ) ~ ancilliaryServicesLabel.singular | title ,
                actions: [{link: path('admin_offered_service_index'), label: 'View all '~ ancilliaryServicesLabel.plural | title, 'icon' : 'icon-list' }]
            }
        %}

		  {% block sectionContent %}

                {% include '::notice.admin.html.twig' %}
			
			<form novalidate="novalidate" action="{{ formAction }}" method="post" {{ form_enctype(form) }} class="basic-form">

				{{ form_row(form.name) }}
				{{ form_row(form.status) }}
				{{ form_rest(form) }}

			   <input type="submit" class="btn btn-large btn-primary" name="submit" value="Save"/>
			</form>
            {% endblock %}
        {% endembed %}
    </div>

{% endblock %}