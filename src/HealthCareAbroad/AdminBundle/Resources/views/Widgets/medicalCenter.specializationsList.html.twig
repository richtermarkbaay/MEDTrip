{% set specializationLabel = getClassLabel('institution_specialization') %}
<div id="specializations" class="treatmentbox">
    <h5 style="padding: 10px; border: 1px solid #EEEEEE" id="clinic_specializations">
        {{ specializationLabel.plural | title }}
        <a href="{{ path('admin_institution_medicalCenter_addSpecialization', {institutionId: institution.id, imcId: institutionMedicalCenter.id}) }}">
            <button class="btn btn-mini pull-right">
                <i class="icon-plus"></i>
                   Add {{ specializationLabel.singular }}
            </button>
        </a>
    </h5>
    
    <div class="boxcontent" style="border: 1px solid #EEEEEE; border-top: none;">
    {% for _institutionSpecialization in institutionSpecializations %}
        {% set _specialization =  _institutionSpecialization.specialization %}
        <table class="table table-striped table-bordered bootstrap-datatable">
            <thead>
                <tr>
                    <th colspan="2">{{_specialization.name |title}}
                    
                    
    					<i class="icon-pencil" title=""></i>
    					<a href="#" ><small>Add Treatments</small></a>
    				
                    
                    </th>
                    
    			</tr>
            </thead>
            <tbody>
                {% for _treatment in _institutionSpecialization.treatments %}
                    <tr class="treatment_row">
        				<td>{{ _treatment.name |title }}</td>
        				<td>
    				        <div class="post-toolbar treatment_action">
        						<i class="icon-trash" title="Delete"></i>
        						<a href="{{ path('admin_institution_medicalCenter_ajaxRemoveSpecializationTreatment', {'tId': _treatment.id, institutionId: institution.id, isId: _institutionSpecialization.id }) }}" onclick="InstitutionSpecialization.removeTreatment(this); return false;" title="" >Delete</a>
        					</div>
        				</td>
        			</tr>
                {% endfor %}
            </tbody>
        </table>
    {% endfor %}
    
    </div>
</div>