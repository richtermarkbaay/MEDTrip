{% set specializationLabel = getClassLabel('institution_specialization') %}
<div id="specializations" class="treatmentbox">
    <h5 style="padding: 10px; border: 1px solid #EEEEEE" id="clinic_specializations">
        {{ specializationLabel.plural | title }}
        <a href="{{ path('admin_institution_medicalCenter_addSpecialization', {institutionId: institution.id, imcId: institutionMedicalCenter.id}) }}">
            <button class="btn btn-mini pull-right">
                <i class="icon-plus"></i>
                   Add {{ specializationLabel.singular }}
            </button>
        </a>
    </h5>
    
    <div class="boxcontent" style="border: 1px solid #EEEEEE; border-top: none;">
    
    {% for _each in institutionSpecializationsData %}
        {% set _specialization =  _each.institutionSpecialization.specialization %}
        <table class="table table-striped table-bordered bootstrap-datatable">
            <thead>
                <tr>
    				<th colspan="3">{{_specialization.name |title}}</th>
    			</tr>
            </thead>
            <tbody>
                {% for _subspecializationName, treatments in _each.groupedTreatments %}
                    {% for _treatment in treatments %}
                        <tr class="treatment_row">
            				<td>{{ _treatment.name |title }}</td>
            				<td>{{ _subspecializationName }}</td>
            				<td>
            				    {% if (_treatment.id in _each.selectedTreatments) %}
            				        <div class="post-toolbar treatment_action">
                						<i class="icon-trash" title="Delete"></i>
                						<a href="{{ path('admin_institution_medicalCenter_ajaxRemoveSpecializationTreatment', {'tId': _treatment.id, institutionId: institution.id, isId: _each.institutionSpecialization.id }) }}" onclick="InstitutionSpecialization.removeTreatment($(this)); return false;" title="" >Delete</a>
                					</div>
            					{% else %}
            					    <div class="post-toolbar treatment_action">
                						<i class="icon-ok" title="Add"></i>
                						<a href="{{ path('admin_institution_medicalCenter_ajaxAddSpecializationTreatment', {'tId': _treatment.id, institutionId: institution.id, isId: _each.institutionSpecialization.id }) }}" onclick="InstitutionSpecialization.addTreatment($(this)); return false;" title="" role="button">Add Treatment</a>
                					</div>
            				    {% endif %}
            					
            				</td>
            			</tr>
                    {% endfor %}
                {% else %}
                    <tr>
        				<td colspan="3">{{_specialization.name |title}} has no treatments yet.</td>
        			</tr>
                {% endfor %}
                
            </tbody>
        </table>
        
    {% endfor %}
    </div>
</div>