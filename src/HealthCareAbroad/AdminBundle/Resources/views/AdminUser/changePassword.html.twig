{% extends 'AdminBundle::layout.html.twig' %}

{% form_theme form '::form.admin.html.twig' %}

{% block content %}
<!-- start content -->
<div id="content">
    <!--  start page-heading -->
    <div id="page-heading">
        <h1>{{ site_name }} Admin Panel</h1>
    </div>
    <!-- end page-heading -->
    
    {% embed '::contentWrapper.admin.html.twig' %}
        
        {% block wrappedContent %}
            <!--  start table-content  -->
            <div id="table-content">
            
                {% include '::notice.admin.html.twig' %}
            
                <form novalidate="novalidate" action="{{ path('admin_change_password') }}" method="POST" {{ form_enctype(form) }} class="user">
                    <!-- start id-form -->
                    <table border="0" cellpadding="0" cellspacing="0"  id="id-form">
                        
                        {{ form_row( form.current_password ) }}
                        {{ form_row( form.new_password ) }}
                        {{ form_row( form.confirm_password ) }}
                        {{ form_rest(form) }}
                        
                        <tr>
                            <th>&nbsp;</th>
                            <td valign="top">
                                <input type="submit" name="submit" value="" class="form-submit" />
                                <input type="reset" value="" class="form-reset"  />
                            </td>
                            <td></td>
                        </tr>
                        
                    </table>
                    <!-- end id-form  -->
                </form>
            </div>
            <!--  end table-content  -->
        {% endblock %}
        
    {% endembed %}
    
</div>
<!--  end content -->
<div class="clear">&nbsp;</div>
{% endblock %}
