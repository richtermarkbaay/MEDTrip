{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'settings'%}

{% block content %}
<!-- start content -->
<div id="content">
    <!--  start page-heading -->
    <div id="page-heading">
    	<h1>{{ site_name }} Admin users</h1>
    </div>

    <!-- end page-heading -->
    
    {% embed '::contentWrapper.admin.html.twig' %}
        
        {% block wrappedContent %}

            {% include '::notice.admin.html.twig' %}
        
		    {% block related_tasks %}
		        {% include 'AdminBundle:AdminUser:relatedTasks.html.twig' with {'showAdd': true, 'showList': false, 'showRoles' : true} %}
		    {% endblock %}

			<div id="table-content" style="width: 70%">

			    {% include '::notice.admin.html.twig' %}
			
			    <table class="table table-bordered sortable-list">
    				<tr>
    					<th class="minwidth-1"> <a href="#">Full name</a></th>
    					<th class="minwidth-1"> <a href="#">Email</a></th>
    					<th class="minwidth-1"> <a href="#">User type</a></th>
    					<th><a href="#">Options</a> </th>
    				</tr>
    				{% for user in users %}
    				    <tr class="{{ cycle(['alternate-row', ''], loop.index) }}">
        					<td>{{ user.fullName | title }}</td>
        					<td>{{ user.email }}</td>
        					<td>{{ user.adminUserType.name | title }}</td>
        					<td class="options-width">
        					</td>
        				</tr>
    				{% endfor %}
				</table> 
			</div>
        {% endblock %}
    {% endembed %}
</div>
<!--  end content -->
{% endblock %}