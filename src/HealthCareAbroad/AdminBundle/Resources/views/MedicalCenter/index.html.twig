{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'manageHcaData' %}
{% set selectedSubTab = 'manage_centers' %}

{% block content %}

    <div id="content">

        <div id="page-heading"><h2>List of Center Types</h2></div>

        {% embed '::contentWrapper.admin.html.twig' %}
            {% block wrappedContent %}

                {% include '::notice.admin.html.twig' %}

                {% set contents = [{
                        'title': 'Add center type', 
                        'description': 'Add new center type',
                        'class': 'add-icon',
                        'href': path('admin_medicalCenter_add'), 
                        'links': [{'title': 'Add a center type', 'href': path('admin_medicalCenter_add')}]
                    }]
                %}

                {% include '::relatedTasks.base.admin.html.twig' with {contents: contents} %}


                <!-- Render Filter Box -->                
                {% autoescape false %} {{ listFilters is defined ? listFilters : '' }} {% endautoescape %}

                <div style="width: 70%">
                    <table id="medical-center-list" class="generic-table" width="100%">
                    <tr>
                        <th class="minwidth-1"><a href="">Name</a></th>
                        <th class="minwidth-1"><a href="">Description</a></th>
                        <th class="actions" width="210">Action</th>
                    </tr>

                    {% for center in medicalCenters %}
                        <tr>
                            <td>{{ center.name }}</td>
                            <td>{{ center.description }}</td>
                            <td align="center">
                                <a href="{{ path('admin_medicalCenter_edit', {id:center.id}) }}" title="Edit" class="icon-1 info-tooltip"></a>
                                {% set class = center.status ? 'icon-2' : 'icon-5' %}
                                <a href="{{ path('admin_medicalCenter_updateStatus', {id:center.id}) }}" title="{{ center.status ? 'Delete' : 'Activate' }}" class="update-status {{ class }} info-tooltip"></a>
                                <a href="{{ path('admin_procedureType_index', {medicalCenter:center.id}) }}" class="icon-type">procedure types</a>
                            </td>
                        </tr>
                    {% else  %}
                        <tr><td class="empty-list" colspan="3">No records yet!</td></tr>
                    {% endfor %}
                    </table>

                    {% if pager.isPaginable %}
                       {{ paginate(pager, 'admin_medicalCenter_index', app.request.query.all) }}
                    {% endif %}                    
                </div>
                
            {% endblock %}
        {% endembed %}
    </div>

{% endblock %}