{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'manageHcaData' %}
{% set selectedSubMenu = 'awardingBodies' %}
{% set awardingBodiesLabel = getClassLabel('awardingBody') %}

{% block content %}
  	<div class="span3">
    {% include 'AdminBundle:Widgets:subMenu.manageHcaData.html.twig'%}
	</div>
	<div class="span9">

		{% embed 'HelperBundle:Widgets:section.html.twig' with { 
                title: ( form.vars.value.id ? 'Edit ' : 'Add ' ) ~ awardingBodiesLabel.singular | title ,
                actions: [{link: path('admin_awardingBody_index'), label: 'View all '~ awardingBodiesLabel.plural | title, 'icon' : 'icon-list' }]
            }
        %}
	
		  {% block sectionContent %}

                {% include '::notice.admin.html.twig' %}
			
			<form novalidate="novalidate" action="{{ formAction }}" method="post" {{ form_enctype(form) }} class="basic-form">

				{{ form_row(form.name) }}
				{{ form_row(form.details) }}
				{{ form_row(form.website) }}
				{{ form_row(form.status) }}
				{{ form_rest(form) }}

				 <input type="submit" class="btn btn-large btn-primary" name="submit" value="Save"/>
			</form>
			
            {% endblock %}
        {% endembed %}
    </div>

{% endblock %}