{% extends '::base.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/procedure/js/Tag.js') }}"></script>
	<script type="text/javascript">
		Tag.assignAutocomplete('procedure_tags');
	</script>
{% endblock %}

{% block body %}
	<style type="text/css">
		label {width:100px;display:inline-block; margin-bottom: 5px;}
	</style>

	<div class="create-tag-form" style="margin: 20px;">

		<h2>
			{% if id is defined %} Edit {% else %} Add {% endif %} Tag
		</h2>

		<form action="{{ path('admin_tagSave') }}" method="post" {{ form_enctype(form) }}>
 			{% if id is defined %} 
 				<input type="hidden" value="{{ id }}" name="id"/> 
 			{% endif %} 
			{{ form_row(form.name) }}
			{{ form_row(form.type) }}
		    <input type="submit"/>
		</form>
	</div>
{% endblock %}