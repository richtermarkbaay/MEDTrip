{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'inquire' %}
{% set selectedSubTab = 'inquire_index'%}
{% set inquiryLabel = getClassLabel('inquiry') %}
{% block content %}
    <div id="content">

    	{% embed 'HelperBundle:Widgets:section.html.twig' 
            with { 
                title: inquiryLabel.plural | title
            }  
        %}
    
          {% block sectionContent %}

            {% include '::notice.admin.html.twig' %}

            <table id="inquiries-list" class="table table-bordered sortable-list">
            <tr>
                <th><a href="#">Inquirer</a></th>
                <th><a href="#">Inquiry Subject</a></th>
                <th><a href="#">Message</a></th>
                <th><a href="#">Email</a></th>
                <th><a href="#">Date Created</a></th>
            </tr>
	
			{% for each in inquiries %}
                <tr>
                    <td>{{ each.firstName }} {{ each.lastName }}</td>
                    <td>{{ each.inquirySubject.name }}</td>
                    <td>{{ each.message }}</td>
                    <td>{{ each.email }}</td>
                    <td align="center">{{ each.dateCreated|date("m/d/Y") }}</td>
                </tr>
           {% endfor %}
                </table>
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}