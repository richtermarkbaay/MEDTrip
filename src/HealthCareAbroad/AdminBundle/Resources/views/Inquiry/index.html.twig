{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'inquire' %}
{% set selectedSubTab = 'inquire_index'%}

{% block content %}
    <div id="content">

        {{ app.session.flash('notice') }}
        <div id="page-heading"><h1>List of Inquiries</h1></div>

        {% embed '::contentWrapper.admin.html.twig' %}
            {% block wrappedContent %}

            {% include '::notice.admin.html.twig' %}

            <table id="inquiries-list" class="table table-bordered sortable-list">
            <tr>
                <th><a href="#">Inquirer</a></th>
                <th><a href="#">Inquiry Subject</a></th>
                <th><a href="#">Message</a></th>
                <th><a href="#">Email</a></th>
                <th><a href="#">Date Created</a></th>
            </tr>

            {% for inquiry in inquiries %}
                <tr>
                    <td>{{ inquiry.firstName }} {{ inquiry.lastName }}</td>
                    <td>{{ inquiry.inquirySubject.name }}</td>
                    <td>{{ inquiry.message }}</td>
                    <td>{{ inquiry.email }}</td>
                    <td align="center">{{ inquiry.dateCreated|date("m/d/Y") }}</td>
                </tr>
            {% else  %}
                <tr><td class="empty-list" colspan="3">No records yet!</td></tr>
            {% endfor %}
            </table>
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}