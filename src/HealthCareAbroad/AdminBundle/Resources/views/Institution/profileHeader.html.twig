<div class="container">
    <div class="institutionbox-inner">
        <div class="navbar-inner">
            <div class="span6">
                <div class="span3">
                    <div class="photo-group">

                        {% if institution.logo is not sameas(NULL) %}
                            {{ media(institution.logo, institution, constant('HealthCareAbroad\\MediaBundle\\MediaContext::INSTITUTION_LOGO'), {alt: 'institution logo'}) | raw }}
                        {% else %}
                            <img id="institution-logo-image" alt="institution logo" src="{{ asset('images/institution/institution-logo.gif') }}" />
                        {% endif %}

                        <span class="label photo-label" style="margin-left:100px; position: absolute; margin-top: -25px;">
                            <a id="institution-logo-link" href="#" data-placement="right" rel="tooltip" href="#" data-original-title="Manage Institution Profile Photo">
                                <i class="icon-picture"></i>
                            </a>
                        </span>
                    </div>
                </div>
                <div class="span9">
                    <h3>{{ institution.name }}</h3>
                    <a href="#"><h5>Manage Your Accreditations, GlobalAwards and Awards</h5></a>
                    <a id="view_admin_users_link" href="{{ path('admin_institution_ajaxLoadAdminUsers', {institutionId: institution.id} ) }}" data-target="#view_admin_users_modal">View Admin Users</a>
                </div>
            </div>
            <div class="span6">
                <a href="{{ path('admin_institution_edit', {'institutionId': institution.id } ) }}"><h5>Manage Your Institution Profile</h5></a>

                <p>{{ json_decode(institution.contactNumber) | join('-') }}</p>
                <p>{{ json_decode(institution.address1) | join(' ') }} </p>
                <p>{{ institution_address_to_array(institution) | join(', ')}}</p>
                {# -- sites here <p></p> #}
            </div>
        </div>
    </div>

</div>


<div id="view_admin_users_modal" class="modal hide fade modal_form_container" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-header">
        <h3>Admin Users</h3>
    </div>
    <div class="modal-body">
        Loading admin users...
    </div>
</div>

<!-- Old upload logo. TODO: Change this to bootstrap dialog upload.
    {# render 'MediaBundle:Default:addMedia' with {institution: institution, context: constant('HealthCareAbroad\\MediaBundle\\MediaContext::INSTITUTION_LOGO')} #}
-->

<script type="text/javascript">
$(function() {
    
    $("#institution-logo-link").click(function() {
        $("#add-media-dialog").dialog("open");
        return false;
    });

    $('a#view_admin_users_link').click(function(){
        _link = $(this);
        _modal = $('#view_admin_users_modal')
        _modal.modal('show');
        $.ajax({
            url: _link.attr('href'),
            type: 'GET',
            dataType: 'json',
            success: function(response) {
                _modal.find('div.modal-body').html(response.html);
            },
            error: function(response) {
                
            }
        });
        
        return false;
    });
});
</script>