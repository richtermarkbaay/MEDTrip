{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'manageHcaData' %}
{% set selectedSubMenu = 'affiliations' %}
{% set affiliationLabel = getClassLabel('affiliation') %}

{% block content %}
 	<div class="span3">
    	{% include 'AdminBundle:Widgets:subMenu.manageHcaData.html.twig'%}
	</div>
    <div id="content" class="span9">

		{% embed 'HelperBundle:Widgets:section.html.twig' 
            with { 
                title: affiliationLabel.plural | title,
                actions: [{link: path('admin_affiliation_add'), label: 'Add '~ affiliationLabel.singular | title, 'icon' : 'icon-ok' }] 
            }  
        %}
        
       {% block sectionContent %}
            
                {% autoescape false %} {{ listFilters is defined ? listFilters : '' }} {% endautoescape %}
                {% set sortBy = app.request.get('sortBy') %}
                {% set sortOrder = app.request.get('sortOrder') %}
                {% set default = sortBy | length ? '' : 'sort-asc' %}
                
                <table id="affiliation-list" class="table table-bordered sortable-list">
                        <tr>
                            <th id="column-name"><a href="{{ app.request.uri }}" class="{{ sortBy == 'name' ? 'sort-' ~ sortOrder : default }}">Name</a></th>
                            <th id="column-details"><a href="{{ app.request.uri }}" class="{{ sortBy == 'details' ? 'sort-' ~ sortOrder : '' }}">Details</a></th>
                            <th id="column-awardingBody"><a href="{{ app.request.uri }}" class="{{ sortBy == 'awardingBody' ? 'sort-' ~ sortOrder : '' }}">Awarding Body</a></th>
                            <th id="column-country"><a href="{{ app.request.uri }}" class="{{ sortBy == 'country' ? 'sort-' ~ sortOrder : '' }}">Country</a></th>
                            <th class="actions" width="100">Action</th>
                        </tr>
            
                {% for each in affiliations %}
                     
                    <tr>
                        <td>{{ each.name }}</td>
                        <td>{{ each.details }}</td>
                        <td>{{ each.awardingBody.name }}</td>
                        <td>{{ each.country.name }}</td>
                        <td>
                            <ul style="list-style: none;">
                                <li><a href="{{ path('admin_affiliation_edit', { id:each.id } ) }}"> <i class="icon-edit"></i> Edit</a></li>
                                
                                <li>
                                    {% set status = each.status ? {label: 'Deactivate', icon: 'icon-remove'} : {label: 'Activate', icon: 'icon-ok'} %}
                                    <a href="{{ path('admin_affiliation_updateStatus', {id: each.id} ) }}" title="" class="update-status">
                                        <i class="{{ status.icon }}"></i> <span>{{ status.label }}</span>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </table>
            {% endblock %}
            
        {% endembed %}
        
        {% if pager.isPaginable %}
           {{ paginate(pager, 'admin_affiliation_index', app.request.query.all) }}
        {% endif %}
        
    </div>
    
{% endblock %}