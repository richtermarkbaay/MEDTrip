{% extends 'AdminBundle::layout.html.twig' %}
{% set selectedTab = 'feedback' %}
{% set selectedSubTab = 'inquire_index'%}
{% set feedbackLabel = getClassLabel('feedback') %}
{% block content %}
    <div id="content">

    	{% embed 'HelperBundle:Widgets:section.html.twig' 
            with { 
                title: feedbackLabel.plural | title
            }  
        %}
    
          {% block sectionContent %}
          
            {% autoescape false %} {{ listFilters is defined ? listFilters : '' }} 
            {% endautoescape %}

            {% set sortBy = app.request.get('sortBy') %}
            {% set sortOrder = app.request.get('sortOrder') %}
            {% set default = sortBy | length ? '' : 'sort-asc' %}
            {% include '::notice.admin.html.twig' %}

            <table id="feedback-list" class="table table-bordered sortable-list">
            <tr>
                <th><a href="#">Subject</a></th>
                <th><a href="#">Message</a></th>
                <th><a href="#">Date Created</a></th>
            </tr>
	
			{% for each in feedbacks %}
                <tr>
                    <td>{{ each.subject | title }}</td>
                    <td>{{ each.message | capitalize }}</td>
                    <td align="center">{{ each.dateCreated|date("m/d/Y") }}</td>
                </tr>
           {% endfor %}
                </table>
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

{% block inlineJavascriptCode %}
<script type="text/javascript">
    $(function(){
    	$('#filter-dateCreated').datepicker();
    });
</script>
{% endblock %}
    