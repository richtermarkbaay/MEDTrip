{% if specializations | length %}

    {% embed 'FrontendBundle:Embed:profileSection.html.twig' with {title: 'Specializations', class: 'specializations'} %}
        {% block sectionContent %}
    	<div class="specializationsbox">

        {% for each in specializations %}
    		<ul class="specializations-list">
    			<li class="first"><a>{{ each.specialization.name }}</a></li>
                {% set _groupedTreatments = group_treatments_by_subspecialization(each.treatments) %}
                
                {% for _subName, _groupedData in _groupedTreatments %}
                
                    {% if _groupedData.treatments | length %}
                    <li class="second">
        				<ul>
        				    {% if _groupedData.subSpecialization is defined and _groupedData.subSpecialization | length%}
        				    <li><a>{{ _groupedData.subSpecialization.name }}</a></li>
        				    {% else %}
        				    <li><a>Other treatments</a></li>
        				    {% endif %}
                        	    
                    	    {% for treatment in _groupedData.treatments %}
        			 	    <li class="third">
        						<ul>
        							<li><a>{{ treatment.name }}</a></li>
        						</ul>
        					</li>
        			        {% endfor %}
        					
        				</ul>
        			</li>
                    {% endif %}
                {% endfor %}
    			
    		</ul>
    	{% endfor %}
    	</div>
        {% endblock %}
    {% endembed %}

{% endif %}