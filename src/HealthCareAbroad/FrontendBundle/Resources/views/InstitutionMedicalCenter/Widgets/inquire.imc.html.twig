{% embed 'FrontendBundle:Embed:modalBox.base.html.twig' with {'modal': {'id' : modalId, 'title': modalTitle, 'customBodyStyle' : 'max-height:400px;','formId': formId}} %}
    {% block modalBody %}
    <div class="alert-error"></div>
    <form novalidate="novalidate" {{ form_enctype(form) }} action="{{ path('frontend_institutionMedicaCenter_ajaxSaveImcInquiry', {institutionId : institution.id, imcId: institutionMedicalCenter.id}) }}" id="{{formId}}" method="POST">
        <div class="inquirer_name control-group">
            <label for="{{ form.children.inquirer_name.vars.id }}">
                <strong>{{ form.children.inquirer_name.vars.label }}</strong>
            </label>
            {{ form_widget(form.inquirer_name) }}
            <span class="help-inline"></span>    
        </div>
        
        <div class="inquirer_email control-group">
            <label for="{{ form.children.inquirer_email.vars.id }}">
                <strong>{{ form.children.inquirer_email.vars.label }}</strong>
            </label>
            {{ form_widget(form.inquirer_email) }}
            <span class="help-inline"></span>    
        </div>
        
        <div class="message control-group">
            <label for="{{ form.children.message.vars.id }}">
                <strong>{{ form.children.message.vars.label }}</strong>
            </label>
            {{ form_widget(form.message, { 'attr': {'rows': 4} }) }}
            <span class="help-inline"></span>    
        </div>
        {{ form_rest(form) }}
                            	                        	
    </form>
    {% endblock %}
    {% block footerBody %}
        <button aria-hidden="true" onclick="Institution.clearForm({{formId}}); return false;" data-dismiss="modal" class="btn">Cancel</button>
        <button data-loader-text="Processing..." onclick="Institution.saveInquiry(this); return false;" id="modal_imc_inquiry_submitButton" data-modalId="{{modalId}}" data-formId="#imc_inquiry_form" data-divParent="#institutionInquiry_" class="btn btn-primary orange">Send Message</button>
    {% endblock %}
{% endembed %}