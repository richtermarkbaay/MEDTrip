{% set businessHours = json_decode(businessHours) %}

{% if businessHours %}

    {% embed 'FrontendBundle:Embed:asideBox.html.twig' with {title: 'Schedule'} %}    
        {% block asideContent %}
        
    
    		<table>
    		    
    		    {% for day, time in businessHours %}
        		    {% if time.from is defined and time.to is defined %}
        			<tr>
        				<td>{{ day }}</td>
        				<td>{{ time.from }}</td>
        				<td>-</td>
        				<td>{{ time.to }}</td>
        			</tr>
        			{% endif %}
    			{% endfor %}
    		</table>
    	{% endblock %}
    {% endembed %}

{% endif %}