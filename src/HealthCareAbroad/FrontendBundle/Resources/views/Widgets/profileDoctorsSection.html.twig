{% if doctors | length %}

    {% embed 'FrontendBundle:Embed:profileSection.html.twig' with {title: 'Doctors', class: 'doctors'} %}    
        {% block sectionContent %}
    
    	<ul class="thumbnails">
    	    {% for doctor in doctors %}
    		<li class="thumbnail">
    			{% if doctor.media %}
    			    {{ media(doctor.media, doctor, 'default', {class: 'pull-left img-polaroid', thumbnail: true}) | raw }}
    			{% else %}
    			    <img src="" class="pull-left img-polaroid"/>
    			{% endif %}
    			<a class="doctor-name" href="">Dr. {{ doctor.firstName }} {{ doctor.middleName }} {{ doctor.lastName }} </a>
    			<p class="media-body">
    			    {% for i, each in doctor.specializations %}
    			        {{ each.name }}{{ i != ((doctor.specializations | length) -1) ? ', ' : '' }}
    			    {% endfor %}
    			</p>
    			<ul class="contact">
    				<li class="email"><a href="">email</a></li>
    				<li class="call"><a href="">contact</a></li>
    				<li class="web"><a href="">website</a></li>	
    			</ul>
    		</li>
    		{% endfor %}
    	</ul>
    	
        {% endblock %}	
    {% endembed %}

{% endif %}