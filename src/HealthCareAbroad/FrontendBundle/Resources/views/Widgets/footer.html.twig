<div class="hca-v-sprite footer-border"></div>
<div id="footer-wrapper">
	<div class="top-content-wrapper container"> <!--This is for the upper part of footer-->
		<div class="site-map-section span4"> <!--This is for Site Map-->
            <h4>Site Map</h4>

			<h5><span>Company</span></h5>
			<ul class="circle-bullet-list">
                <li><a href="{{ path('frontend_page_about_us') }}">About Us</a></li>
                <li><a href="http://www.healthcareabroad.com/blog/" target="_blank">Blog</a></li>
                 <li><a href="{{ path('frontend_page_terms_of_use') }}">Terms of Use</a></li>
                 <li><a href="{{ path('frontend_page_privacy_policy') }}">Privacy Policy</a></li>
                <!--li><a href="#">Site Map</a></li -->
            </ul>

            <h5><span>Contact Us</span></h5>
            <ul class="circle-bullet-list">
                <li>
                    <a id="feedback-message" href="#">Feedback</a>
                    {% render 'FrontendBundle:Feedback:view' %}
                </li>
                <li>
                    <a href="{{ path('frontend_page_inquiry') }}">Advertising Inquiry</a>
                </li>
            </ul>
		</div>

		<div class="facebook-section span4"> <!--This is for the Facebook API-->
			<h4>Like Us on Facebook</h4>
            <iframe src="http://www.facebook.com/plugins/likebox.php?href=https%3A%2F%2Fwww.facebook.com%2Fhealthcareabroadcom&amp;width=287&amp;height=410&amp;show_faces=true&amp;colorscheme=light&amp;stream=false&amp;border_color&amp;header=false&amp;scrolling=no"></iframe>
		</div>

		<div class="subscribe-section span4"> <!--This is for the Subscriptions-->
			{% render 'FrontendBundle:Default:renderNewsletterForm' %}
			<div class="register row">
                <h4 class="bordered">Want to list your Clinic?</h4>
                <!--<a href="#" class="sign-up">Sign Up</a>
                <span class="or-option"></span>
                <a href="#" class="sign-up">Sign In</a>-->
                <p>Patients from all over the world are searching <a href="http://www.healthcareabroad.com">HealthcareAbroad.com</a> - make sure they can find you!</p>
                <a class="btn green" href="{{ path('frontend_page_inquiry') }}">Contact HealthcareAbroad</a>
			</div>
		</div>
	</div>

	<div class="bottom-content-wrapper container"> <!--This is for the lower part of footer-->
		<ul class="socials-nav pull-right inline-list">
			<li><a href="https://plus.google.com/u/0/111671188601151092646/posts" class="hca-sprite social-icon google-plus" target="_blank"></a></li>
			<li><a href="https://www.facebook.com/healthcareabroadcom" target="_blank" class="hca-sprite social-icon facebook"></a></li>
			<li><a href="https://twitter.com/HCAbroad" target="_blank" class="hca-sprite social-icon twitter"></a></li>
		</ul>

        <p>&copy; Copyright 2013, Healthcareabroad.com Inc. All rights reserved</p>
		<ul class="site-nav unstyled inline-list">
			<li><a href="{{ path('frontend_page_terms_of_use') }}">Terms of Use</a></li>
			<li class="divider">/</li>
			<li><a href="{{ path('frontend_page_privacy_policy') }}">Privacy Policy</a></li>
			<li class="divider">/</li>
			<li><a href="{{ path('frontend_page_about_us') }}">About Us</a></li>
		</ul>
	</div>
</div>

{% block inlineJavascriptCode %}
    <script src="{{ asset('bundles/frontend/js/Feedback.js') }}"></script>
    <script type="text/javascript">
        $('#feedback-message').click(function(){
        	$('div#feedbackHca').modal('show');
            return false;
        });

        $('#feedback-form').click(function(){
        	$('div#feedbackHca').modal('show');
            return false;
        });

        $('#feedbackHca').feedbackModalForm({
            submitButton: $('#modal_feedback_submitButton'),
            form: $('form#feedbackForm') 
        });

    </script>
{% endblock %}
