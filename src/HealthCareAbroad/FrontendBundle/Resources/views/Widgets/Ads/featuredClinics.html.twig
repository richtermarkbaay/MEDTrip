{% if featuredClinicAds %}

<div class="featured_wrapper">
	<div class="heading">
		<h3>Featured Clinics</h3>
	</div>
	<div id="featured_content">

		{% for each in featuredClinicAds %}
		<div class="featured_item">
		    {% set clinicUrl = path('page_institutionMedicaCenter_profile', {institutionSlug: each.institution.slug, imcSlug: each.institutionMedicalCenter.slug}) %}
			<div class="general row">
				<div class="clinic-box span2">
					<a href="{{ clinicUrl }}">
    				    {% if each.institutionMedicalCenter.logo %}
    				        {{ media(each.institutionMedicalCenter.logo, each.institution, 'default', {class: 'clinic-logo', alt: 'clinic logo', thumbnail: true}) | raw }}
    				    {% else %}
    				        <img src="" class="clinic-logo" alt="clinic logo"/>
    				    {% endif %}
					</a>

                    {% include 'FrontendBundle:Widgets:ratings.html.twig' %}

				</div>
				<div class="description-box span4">
					<a href="{{ clinicUrl }}">
					    <h3>{{ each.institutionMedicalCenter.name }}</h3>
					</a>
					<h5>{{ each.institution.city.name }}, {{ each.institution.country.name }}</h5>
					<div>{{ each.institutionMedicalCenter.description | raw }}</div>
				</div>
				<div class="thumb-box span2">
					<div class="img-background">
    				    {% if each.media %}
    				        {{ media(each.media, each, 'default', {class: 'img-polaroid', alt: 'clinic logo', thumbnail: true}) | raw }}
    				    {% else %}
    				        <img class="img-polaroid" src="" alt="featured_pic" />
    				    {% endif %}
					</div>
					<a href="{{ clinicUrl }}" class="btn orange"> <span class="icon-search icon-white"></span> Learn More </a>
				</div>
			</div>
 			<div class="details row">
<!--				<div class="span4">
					<div class="media">
						<div class="image_preview">
							<a class="pull-left" href="#"><img class="media-object img-circle" src="/images/frontend/about_icon_green.png" alt="clinic logo"/></a>
						</div>
						<div class="media-body">
							<a href="#"><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor in. And another group of text to make it longer.</p></a>
						</div>
					</div>
				</div>
-->
                {% set clinicHighlights = json_decode(each.highlights) %}    
                {% for clinicHighlight in clinicHighlights %}
                    <div class="span4">
                        <div class="media">
                            <img class="media-object img-circle pull-left" src="{{ clinicHighlight.icon ? clinicHighlight.icon.src_thumbnail : '/images/frontend/default-doctor-logo-orange.png' }}" alt="doctor logo" width="50"/>
                            <div class="media-body">
                                {% if clinicHighlight.header %}
                                    <h5 class="media-heading">{{ clinicHighlight.header }}</h5>
                                {% endif %}
                                <p>{{ clinicHighlight.label }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
		    </div>
        </div><!--End of featured_item 1-->
    {% endfor %}
	</div><!--End of featured_content-->
</div><!--End of featured_wrapper-->

{% endif %}