{% if featuredClinicAds %}

<div class="featured_wrapper">
	<div class="heading">
		<h3>Featured Clinics</h3>
	</div>
	<div id="featured_content">

	{% for each in featuredClinicAds %}
	    {% if each.institution and each.institutionMedicalCenter %}
	        <div class="featured_item">
    		    {% set clinicUrl = path('frontend_institutionMedicaCenter_profile', {institutionSlug: each.institution.slug, imcSlug: each.institutionMedicalCenter.slug}) %}
    			<div class="general row">
    				<div class="clinic-box span2">
    					<a href="{{ clinicUrl }}">
        				    {% if each.institutionMedicalCenter.logo %}
        				        {{ media(each.institutionMedicalCenter.logo, each.institution, 'default', {class: 'clinic-logo', alt: 'clinic logo'}) | raw }}
        				    {% else %}
        				        <img src="{{ imageplaceholder.clinicLogo }}" class="clinic-logo" alt="clinic logo"/>
        				    {% endif %}
    					</a>
    
    					<!-- User Ratings Temporarily Commented -->
                        {# include 'FrontendBundle:Widgets:ratings.html.twig' #}
    
    				</div>
    				<div class="description-box span4">
    				    <h3><a href="{{ clinicUrl }}">{{ each.title }}</a></h3>
    					<h5>{{ each.institution.city.name }}, {{ each.institution.country.name }}</h5>
    					<div>{{ each.description | raw }}</div>
    				</div>
    				<div class="thumb-box span2">
                        {% if each.media %}
    					    <div class="img-background">
        				        {{ media(each.media, each, 'default', {class: 'img-polaroid', alt: 'clinic logo'}) | raw }}
    					    </div>
                        {% endif %}
    					<a href="{{ clinicUrl }}" class="btn orange"> <span class="icon-search icon-white"></span> Learn More </a>
    				</div>
    			</div>
     			<div class="details row">
                    {% set clinicHighlights = json_decode(each.highlights) %}    
                    {% for clinicHighlight in clinicHighlights %}
                        <div class="span4">
                            <div class="media">
                                {% if clinicHighlight.icon %}
                                    <img class="media-object img-circle pull-left" src="{{ clinicHighlight.icon.src }}" alt="logo" width="50"/>
                                {% else %}
                                    {% if clinicHighlight.type == 3 %}
                                        <img alt="clinic logo" src="{{ imageplaceholder.doctorIcon }}" class="media-object img-circle pull-left">
                                    {% else %}
                                        <span class="{{ ad_highlight_placeholder_class(clinicHighlight.type, 'green') }} media-object img-circle pull-left"></span>
                                    {% endif %}
                                {% endif %}
    
                                <div class="media-body">
                                    {% if clinicHighlight.header %}
                                        <h5 class="media-heading">{{ clinicHighlight.header }}</h5>
                                    {% endif %}
                                    <p>{{ clinicHighlight.label }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
    		    </div>
            </div><!--End of featured_item 1-->
	    {% endif %}
		
    {% endfor %}
	</div><!--End of featured_content-->
</div><!--End of featured_wrapper-->

{% endif %}