<div class="heading">
	<h3>Common Treatments</h3>
</div>

<div class="aside_wrapper">
    {% for each in commonTreatments %}
	<div class="media">
		<div class="image_preview">
		    {% set image = each.media ? '/media/ads/' ~ each.institution.id ~ '/' ~ each.media.name : '' %}

			<a class="pull-left" href="#"><img class="media-object img-circle" src="{{image}}" alt="image_preview">
			<img class="more-icon" src="/images/frontend/learn_more_button.png" alt="learn more"></a>
		</div>
		<div class="media-body">
			<a href="#"><h4 class="media-heading">{{ each.title }}</h4></a>
			<p>{{ each.description }}</p>
		</div>
	</div>
	{% endfor %}
</div>
