{% if news %}

<div class="aside-articles aside_wrapper">
	<div class="viewport">
		<div class="overview">
		    {% for each in news %}

    		    {% if each.externalUrl %}
    		        {% set link = each.externalUrl %}
    		        {% set target = '_blank' %}
    		    {% else %}
    		        {% set link = '#' %}
    		        {% set target = '' %}
    		    {% endif %}
    		    		        		    
    			<div class="media">
    				<div class="image_preview">
    					<a class="pull-left" href="{{ link }}" target="{{ target }}">
    					    {% if each.media %}
    					        {{ media(each.media, each, 'default', {class: 'media-object img-circle'}) | raw }}
    					    {% else %}
    					        <span class="news-icon media-object img-circle pull-left"></span>
    					    {% endif %}
    					</a>
    				</div>
    				<div class="media-body">
    					<a href="{{ link }}" target="{{ target }}"><h4 class="media-heading">{{ each.title }}</h4></a>
    					<p>{{ each.description }}</p>
    				</div>
    			</div>
			{% endfor %}
		</div>
	</div>
</div> <!--End of aside_scrollbar-->

{% endif %}

