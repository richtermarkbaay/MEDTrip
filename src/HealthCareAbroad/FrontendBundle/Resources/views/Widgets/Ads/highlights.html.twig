
{% if highlight %}

{% set institutionUrl = get_institution_frontend_url(highlight.institution) %}
{% set featuredImages = json_decode(highlight.highlightFeaturedImages) %} 

<div id="highlight"> <!--Highighted Institution-->
	<a href="{{ institutionUrl }}" class="clinic span2 offset6">
        {% if highlight.institution.logo %}
            {{ media(highlight.institution.logo, highlight.institution, 'default', {alt: 'logo', thumbnail: true}) | raw }}
        {% else %}
            <img src="" alt="logo"/>
        {% endif %}
	</a>

    <div class="upper_box row">
        <h3 class="span6">{{ highlight.institution.name }}</h3><br>
        <h5 class="span6">{{ highlight.institution.city.name }}, {{ highlight.institution.country.name }}</h5>
    </div>
	
	
	<div class="row"> <!--Bootstrap carousel-->
		<div class="carousel slide span8" id="feature_carousel">
			<div class="carousel-inner">			
			
			    {% for i, image in featuredImages %}
				<div class="{{ i==0 ? 'active' : '' }} item row">
					<img alt="" src="/media/ads/{{ highlight.institution.id }}/{{ image.name }}" class="span8">
				</div> <!--End of slider_item 1-->
			    {% endfor %}
			</div>
			<div class="nav-pills">
				<a data-to="1" href="#feature_carousel" class="carousel-pills pager-active"><span>&nbsp;</span></a>
				<a data-to="2" href="#feature_carousel" class="carousel-pills"><span>&nbsp;</span></a>
				<a data-to="3" href="#feature_carousel" class="carousel-pills"><span>&nbsp;</span></a>
			</div>
			<a class="btn white feature-btn"> <span class="icon-search icon-orange"></span> Learn More </a>
		</div> <!--End of carousel slide-->
	</div> <!--End of carousel row-->

	<div class="lower_box row">
