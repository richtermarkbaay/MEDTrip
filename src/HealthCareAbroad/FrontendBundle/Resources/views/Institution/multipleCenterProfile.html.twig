{% set streetAddress = institution_address_to_string(institution, ['address1']) %}
{% set mainAddress = institution_address_to_string(institution, ['city', 'state', 'country', 'zipCode']) %}

{% include 'FrontendBundle:Institution/Widgets:commonHeading.html.twig' with {viewData: {
        headerText: institution.name,
        featuredMediaSource: institution.featuredMedia and institution.featuredMedia.src 
            ? institution.featuredMedia.src 
            : imageplaceholder.institutionFeaturedImage,
        logoSource: institution.logo and institution.logo.src
            ? institution.logo.src
            : null,
        contactNumber: contact_details_to_json(institution.contactDetails, true),
        streetAddress: streetAddress,
        mainAddress: mainAddress,
        institutionInquiryLink: '#form'
    }}
%}

<div class="profile-wrapper tab-content span8">
	<ul class="nav nav-tabs" id="institutionTab">
	  	<li class="active"><a href="#overview">OVERVIEW</a></li>
	  	{% if institutionDoctors|length %}
	  	    <li><a href="#doctors">DOCTORS</a></li>
        {% endif %}
	</ul> <!--Twitter bootstrap Tabs-->

	<!-- Tabs Content -->
	<div id="overview" class="tab-pane active">
        {% include 'FrontendBundle:Institution/Widgets:overview.html.twig' %}
    </div>

    {% if institutionDoctors|length %}
        <div id="doctors" class="tab-pane">
            {% include 'FrontendBundle:Widgets:profileDoctorsList.html.twig' with {doctors: institutionDoctors} %}
        </div>
    {% endif %}
    <!-- End of Tabs Content -->
    
    
    <div class="profile-widget-wrapper contact">
        <h5>Contact Information</h5>
        <div class="row-fluid">
            <div class="span5">
                <div class="media">
                    <i class="icon-map-marker icon-2x pull-left orange"></i>
                    <div class="media-body">
                        {{ streetAddress }}, {{ mainAddress }} 
                    </div>
                </div>
            </div>
            <div class="span7">
                <ul class="unstyled inline-list pull-right">
                    <li>
                        <a href="#" id="example1" rel="popover" class="btn orange"><i class="icon-phone"></i> Call Us</a>

                    </li>
                    <li>
                        <a class="btn orange" href="#form_feedback" role="button"><i class="icon-envelope-alt"></i>  Email Us</a>
                    </li>
                    <li>
                        <a id="visit_website" class="btn orange" href="#" role="button" data-toggle="modal"><i class="icon-globe"></i> Visit Website</a>
                    </li>
                </ul>
                <ul class="unstyled inline-list pull-right">

                    <li>
                        <a id="hospital-contact" class="btn orange" href="#">Visit <i class="icon-facebook"></i></a>
                    </li>
                    <li>
                        <a id="email_multiple" class="btn orange" href="#modal_multiple_institution_inquiry_form"
                        role="button" data-toggle="modal">Visit <i class="icon-twitter"></i></a>
                    </li>
                    <li>
                        <a id="visit_website" class="btn orange" href="#" role="button" data-toggle="modal">Visit <i class="icon-google-plus"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<aside class="span4 aside-wrapper">
    {% include 'FrontendBundle:Widgets:profileLocationAside.html.twig' %}

    {% include 'FrontendBundle:Widgets:profileMediaAside.html.twig' with { media: institution.gallery ? institution.gallery.media : [], logo: institution.logo } %}

    <section id="form_feedback" class="widget-wrapper">
        <h4 class="widget-heading">
            Email this Institution
        </h4>
        {% include 'FrontendBundle:Institution/Widgets:inquiryFormAside.html.twig' with {form: form} %}
    </section>
</aside> <!--End of aside_content-->
<div class="span12">
    <p>Copyright 2013, <b>Hospital or Clinic Name Here</b> 
    </p>
</div>


