{% if institution.institutionMedicalCenters | length %}
    {% embed 'FrontendBundle:Embed:profileSection.html.twig' with {title: 'Clinics', class: 'clinics'} %}
        {% block sectionContent %}
            {% for each in institution.institutionMedicalCenters %}
                <div class="media">
                    <a class="thumbnail-wrapper img-polaroid pull-left" href="{{ path('frontend_institutionMedicaCenter_profile', {institutionSlug: institution.slug, imcSlug: each.slug}) }}">
                        {% if each.logo and each.logo.src %}
    				        <img src="{{ each.logo.src }}" alt="{{ each.name }}" class="logo" />
    				    {% else %}
    				        <span class="hca-sprite clinic-default-logo logo"></span>
    				    {% endif %}
                    </a>
                    <div class="media-body">
                        <h4>
                            <a href="{{ path('frontend_institutionMedicaCenter_profile', {institutionSlug: institution.slug, imcSlug: each.slug}) }}">{{ each.name }}</a>
                        </h4>
                        <!-- Static markup for the clinic specializations -->
                        <p>{{ each.specializationsList | join(', ')}}</p> 
                    </div>
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endif %}