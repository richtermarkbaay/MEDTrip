{% embed 'FrontendBundle:Embed:modalBox.base.html.twig' with {'modal': {'id' : modalId, 'title': modalTitle, 'customBodyStyle' : 'max-height:400px;', 'formId': formId}} %}
    {% block modalBody %}
    <div class="alert-error"></div>
    <form novalidate="novalidate" {{ form_enctype(form) }} action="{{ path('frontend_multiple_center_ajaxSaveInstitutionInquiry', {institutionId : institution.id}) }}" id="{{formId}}" method="POST" class="basic-form">        
        <div class="inquirer_name control-group">
            <strong>{{ form_label(form.inquirer_name) }}</strong>
            {{ form_widget(form.inquirer_name, { 'attr': {'class': 'span4'} }) }}
        </div>
        
        <div class="inquirer_email control-group">
            {{ form_label(form.inquirer_email) }}
            {{ form_widget(form.inquirer_email, { 'attr': {'class': 'span4'} }) }}
        </div>
        
        <div class="message control-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message, { 'attr': {'class': 'span6', 'rows': 6} }) }}
        </div>
        
        </br>
        {{ form_rest(form) }}
                            	                        	
    </form>
    {% endblock %}
    {% block footerBody %}
        <button aria-hidden="true" onclick="Institution.clearForm({{formId}}); return false;" data-dismiss="modal" class="btn">Cancel</button>
        <button data-loader-text="Processing..." onclick="Institution.saveInquiry(this); return false;" id="modal_institution_inquiry_submitButton" data-modalId="{{modalId}}" data-formId="#institution_inquiry_form" data-divParent="#institutionInquiry_" class="btn btn-primary orange">Send Message</button>
    {% endblock %}
{% endembed %}