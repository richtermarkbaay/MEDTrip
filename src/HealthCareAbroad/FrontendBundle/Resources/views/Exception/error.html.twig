        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <link rel="shortcut icon" type="image/x-icon" href="/images/frontend/favicon.ico">
        
        {% javascripts
            'js/jquery/jquery-1.8.2.js'
            'js/bootstrap.min.js'
            output='js/compiled-error.js'
        %}

            <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
        
        {% stylesheets 
            'css/bootstrap.min.css'
            'css/frontend/hca.min.css'
            output='css/compiled-error.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="screen"/>
        {% endstylesheets %}
        
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js">
                                    
