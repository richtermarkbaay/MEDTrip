        <title>
            HealthCareAbroad - The Resource for Global Healthcare
        </title>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js">
                        
        </script>
        <script src="js/bootstrap.min.js">
                        
        </script>
    </head>
    
    <body>
        <div id="fixed_container">
            <header id="header">
                <!--Header-->
                <div class="container">
                    <a class="logo span5" href="index.html">
                        <h1 class="title">HealthcareAbroad</h1>
                    </a>
                    <nav class="menu">
                        <ul>
                            <li>
                                <a href="#">Search</a>
                            </li>
                            <li>
                                <a href="#">Procedures</a>
                            </li>
                            <li class="active">
                                <a href="#">Destination</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </header>
            <!--End of header-->
            <div id="content" class="container content error-page">
                <!--End of highlight-->
                <div id="details" class="row">
                    <div class="error">
                        <div class="pull-left error-code">
                            <h1>
                                {{ status_code }}
                            </h1>
                        </div>
                        
                        <h2 class="error-description">
                            {{ status_text }}
                        </h2>
                        {% if status_text_details is defined and status_text_details | length %}
                        <h2>
                            {{ status_text_details }}
                        </h2>
                        {% endif %}
                        <div class="helper row-fluid">
                            <div class="message span12">
                                <p class="message">
                                    <strong>
                                        Worry not my friend!
                                    </strong>
                                    <br>
                                    The buttons below shall help you find what you're looking for.
                                    <br><br>
                                </p>
                            </div>
                            <div class="links">
                                <div class="span4">
                                    <a href="" class="btn green btn-large span8 offset3">
                                         <i class="icon-chevron-left icon-white"></i>  PREVIOUS PAGE
                                     </a>
                                </div>
                                <div class="span4">
                                    <a href="#report" data-toggle="modal" class="btn orange btn-large span8 offset2">
                                         <i class="icon-envelope icon-white"></i>  SUBMIT A REPORT
                                     </a>
                                    <div id="report" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                                    aria-hidden="true">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                x
                                            </button>
                                            <h3 id="myModalLabel">
                                                Submit Report
                                            </h3>
                                        </div>
                                        <div class="modal-body">
                                            <label for="reportData">
                                                <strong>
                                                    What seems to be the problem?
                                                </strong>
                                            </label>
                                            <textarea class="span12" name="reportData" id="reportData" cols="30" rows="10">
                                            </textarea>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn" data-dismiss="modal" aria-hidden="true">
                                                Cancel
                                            </button>
                                            <button class="btn orange">
                                                Send Now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <a href="" class="btn green btn-large span8 offset1">
                                         <i class="icon-search icon-white"></i> SEARCH HCA
                                     </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--End of content-->
            <div class="border_pattern_footer">
                &nbsp;
            </div>
            <!--Jagged border below the content-->
            <div id="footer_wrapper">
                <div class="container">
                    <div class="upper_part row">
                        <!--This is for the upper part of footer-->
                        <div class="site_map span4">
                            <!--This is for Site Map-->
                            <h4>
                                Site Map
                            </h4>
                            <div class="row">
                                <div class="span2">
                                    <h5>
                                        <a href="">Home</a>
                                    </h5>
                                    <ul>
                                        <li>
