<form class="{{ attr.class is defined ? attr.class : 'search-form broad_search_form' }} form-inline" name="search_box" method="post" action="{{ path('frontend_search_process') }}">
    <div class="combo-wrapper">
        <label>Search</label>
        <input class="type_in" type="text" name="sb_treatment" id="treatment_input_field" placeholder="Specialization or Treatment" autocomplete="off" data-container="#treatments_list" >
        <input type="hidden" name="treatment_id" id="treatment_id" />
        
        <div class="popup treatments">
            <button id="treatments_dropdown_button" data-toggle="dropdown" class="btn text-left small default btn-pop">
                <span class="icon-chevron-down pull-right"></span>
            </button>
            <div id="treatments_dropdown_menu" role="menu" class="popup-box dropdown-menu"></div>
        </div>
    </div>

    <div class="combo-wrapper">
        <label>Near</label>
        <input class="type_in" type="text" name="sb_destination" id="destination_input_field" placeholder="City or Country" autocomplete="off" data-container="#destinations_list" data-allow-empty="1">
        <input type="hidden" name="destination_id" id="destination_id"/>
        
        <div class="popup destinations">
            <button id="destinations_dropdown_button" data-toggle="dropdown" class="btn text-left small default btn-pop">
                <span class="icon-chevron-down pull-right"></span>
            </button>
            <div role="menu" id="destinations_dropdown_menu" class="popup-box dropdown-menu"></div>
        </div>
    </div>

    <button type="submit" class="btn pull-right">Let's Go</button>

    <div class="helper-link">
        <a class="treatment-link" href="{{ path('frontend_treatment_list') }}"> View all specializations</a>
        <a class="white tiny destination-link" href="{{ path('frontend_destination_list') }}"> View all destinations</a>
    </div>
</form>



<script type="text/javascript" src="{{ asset('bundles/search/js/widgets.js') }}"></script>
