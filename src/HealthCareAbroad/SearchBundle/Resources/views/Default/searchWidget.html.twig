<div id="top-search">
	<form action=" {{ path('search_initiate') }}" method="post">
		<table border="0" cellpadding="0" cellspacing="0">
	    	<tr>
				<td>{{ form_widget(form.term, { 'attr': {'class': 'top-search-inp', 'onblur': 'if (this.value=="") { this.value="Search"; }', 'onfocus': 'if (this.value=="Search") { this.value=""; }'} }) }}</td>	
				<td>{{ form_widget(form.category, { 'attr': {'class': 'styledselect'} }) }}</td>
				<td><input type="image" src="{{ asset('images/admin/shared/top_search_btn.gif') }}"  /></td>
	    	</tr>
	    </table>
	</form> 
</div> 
