{% extends 'FrontendBundle::layout.html.twig' %}
{% block content %}
    {% block wrappedContent %}

        <div class="main">
            <div class="box_outer">

                You searched for medical centers located at {{ country.name }}

                <ul>
                {% for center in centers %}
                    <li>
                        <a href="/{{ country.slug }}/{{ center.medicalCenter.slug }}" >{{ center.medicalCenter.name }}</a>
                    </li>
                {% else %}
                    No medical centers found.
                {% endfor %}
                </ul>

            </div>

        </div> <!--End Main-->
        <!-- Sidebar Navigation -->
        {% block right_navigation %}
            {% include 'FrontendBundle:Default:sidebar.html.twig' %}
        {% endblock %}

    {% endblock %}

    {{ addInlineJavascript(getTemplateContents('FrontendBundle:Default:indexInline.js.twig')) }}

{% endblock %}