{% extends 'FrontendBundle::layout.html.twig' %}

{% block content %}

    <section class="container">
        <div class="callout">
            <div class="content">
                <div class="span9">
                    <div class="media">
                        <div class="media-body">
                            <h1 class="search-info"> Search Results for <small>{{ destinationLabel }}</small></h1>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <a href="#" class="all-clinic btn green">Back to Search</a>
                </div>
            </div>
            <div class="triangle-border"></div>
        </div>
    </section>

    <section id="content" class="container">
        <div id="details" class="row">
            <div id="main_content" class="span8">
                <header class="filters">
                    <div class="pull-left">
                        <h2 class="total">{{ searchResults|length }} <small>Results Found</small></h2>
                    </div>
                </header>

                {% for institution in searchResults %}
                    {% set rating = random(5) %}
                <article class="media search-entry">
                    <a class="pull-left" href="#">
                        <span class="search-entry-thumb" style="background: url(/images/frontend/clinic-logo6.png) center center no-repeat; background-size: 100% 100%"></span>
                        <div class="rating">
                            <p>USER RATINGS</p>
                            <ul>
                                {% for i in 1..5 %}
                                    {% if i <= rating %}
                                        <li><img src="/images/frontend/staricon_orange.png" alt="star"/></li>
                                    {% else %}
                                        <li><img src="/images/frontend/staricon_grey.png" alt="star"/></li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </a>

                    <div class="media-body">
                        <h3 class="media-heading">{{ institution.name }}</h3>
                        <div class="media">
                            <div class="pull-left">
                                <img src="images/frontend/address_icon2.png" class="media-object">
                            </div>
                            <div class="media-body">
                                <small>
                                    {{ institution_address_to_array(institution) | join(', ')  }}<br>
                                    <b>{{ institution.city }}, {{ institution.country }}</b>
                                </small>
                            </div>
                            <a href="#" class="more-info btn pull-right green"> <span class="icon-search icon-white"></span> More Info </a>
                        </div>
                    </div>
                </article>

                {% endfor %}

                <div class="pagination">
                  <ul>
                    <li><a href="#">Prev</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">Next</a></li>
                  </ul>
                </div>
            </div> <!--End of main_content-->

            <aside id="aside_content" class="span4">
                {#% include  %#}
            </aside> <!--End of aside_content-->
        </div>
    </section> <!--End of content-->

    {{ addInlineJavascript(getTemplateContents('FrontendBundle:Default:indexInline.js.twig')) }}

{% endblock %}